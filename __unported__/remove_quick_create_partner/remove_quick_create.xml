<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Settings for removing quick create and create -->
        <record id="remove_m2o_dialog" model="ir.config_parameter">
            <field name="key">web_m2x_options.m2o_dialog</field>
            <field name="value">False</field>
        </record>
        <record id="remove_create" model="ir.config_parameter">
            <field name="key">web_m2x_options.create</field>
            <field name="value">False</field>
        </record>

        <!-- Settings for adding search_more everywhere -->
        <record id="add_search_more" model="ir.config_parameter">
            <field name="key">web_m2x_options.search_more</field>
            <field name="value">True</field>
        </record>

    </data>
</openerp>