<openerp>
    <data>
        <record id="update_child_picture_date_cron" model="ir.cron">
            <field name="name">Launch child picture date update</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="False"/>
            <field name="function" eval="'update'" />
            <field name="model" eval="'update.child.picture.date'"/>
            <field name="args" eval="('picture',)"/>
        </record>

        <record id="update_child_basic_informations_cron" model="ir.cron">
            <field name="name">Launch child basic information update</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="False"/>
            <field name="function" eval="'update'" />
            <field name="model" eval="'update.child.picture.date'"/>
            <field name="args" eval="('basic',)"/>
        </record>
    </data>
</openerp>
