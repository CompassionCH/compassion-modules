<odoo>
    <data noupdate="1">
        <record id="report_partner_communication" model="ir.actions.report">
            <field name="name">A4 Letterhead</field>
            <field name="model">partner.communication.job</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">partner_communication_reminder.partner_communication</field>
        </record>
        <record id="paperformat_euro_a4_no_margin" model="report.paperformat">
            <field name="name">European A4 without borders</field>
            <field name="default" eval="False"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
        </record>
        <record id="report_partner_communication" model="ir.actions.report">
            <field name="paperformat_id" ref="paperformat_euro_a4_no_margin"/>
        </record>
        <record id="sponsorship_reminders_cron" model="ir.cron">
            <field name="name">Send sponsorship reminders</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_recurring_contract"/>
            <field name="state">code</field>
            <field name="code">model.send_sponsorship_reminders()</field>
            <field name="active" eval="False"/>
        </record>
        <record id="sponsorship_reminder_1" model="partner.communication.config">
            <field name="name">Sponsorship Reminder 1</field>
            <field name="email_template_id" ref="email_sponsorship_reminder_1"/>
            <field name="report_id" ref="report_partner_communication"/>
            <field name="send_mode">physical</field>
            <field name="print_if_not_email">True</field>
            <field name="model_id" ref="model_recurring_contract"/>
            <field name="user_id" search="[('name', 'like', 'Maglo Rachel')]"/>
            <field name="attachments_function">get_reminder_bvr</field>
        </record>
        <record id="sponsorship_reminder_2" model="partner.communication.config">
            <field name="name">Sponsorship Reminder 2</field>
            <field name="email_template_id" ref="email_sponsorship_reminder_2"/>
            <field name="report_id" ref="report_partner_communication"/>
            <field name="send_mode">physical</field>
            <field name="print_if_not_email">True</field>
            <field name="model_id" ref="model_recurring_contract"/>
            <field name="user_id" search="[('name', 'like', 'Maglo Rachel')]"/>
            <field name="attachments_function">get_reminder_bvr</field>
        </record>
        <record id="sponsorship_waiting_reminder_1" model="partner.communication.config">
            <field name="name">Sponsorship Waiting Reminder 1</field>
            <field name="email_template_id" ref="email_sponsorship_waiting_reminder_1"/>
            <field name="report_id" ref="report_partner_communication"/>
            <field name="send_mode">physical</field>
            <field name="print_if_not_email">True</field>
            <field name="model_id" ref="model_recurring_contract"/>
            <field name="user_id" search="[('name', 'like', 'Maglo')]"/>
            <field name="attachments_function">get_reminder_bvr</field>
        </record>
        <record id="sponsorship_waiting_reminder_2" model="partner.communication.config">
            <field name="name">Sponsorship Waiting Reminder 2</field>
            <field name="email_template_id" ref="email_sponsorship_waiting_reminder_2"/>
            <field name="report_id" ref="report_partner_communication"/>
            <field name="send_mode">physical</field>
            <field name="print_if_not_email">True</field>
            <field name="model_id" ref="model_recurring_contract"/>
            <field name="user_id" search="[('name', 'like', 'Maglo')]"/>
            <field name="attachments_function">get_reminder_bvr</field>
        </record>
        <record id="sponsorship_waiting_reminder_3" model="partner.communication.config">
            <field name="name">Sponsorship Waiting Reminder 3</field>
            <field name="email_template_id" ref="email_sponsorship_waiting_reminder_3"/>
            <field name="report_id" ref="report_partner_communication"/>
            <field name="send_mode">physical</field>
            <field name="model_id" ref="model_recurring_contract"/>
            <field name="user_id" search="[('name', 'like', 'Maglo')]"/>
        </record>
        <template id="partner_communication">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="success_story" t-value="docs.mapped('success_story_id')"/>
                    <t t-set="bvr" t-value="docs.mapped('product_id')"/>
                    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                    <t t-set="print_header" t-value="o.print_header"/>
                    <t t-set="display_pp" t-value="o.display_pp"/>
                    <t t-set="partner" t-value="o.partner_id"/>
                    <t t-set="print_subject" t-value="o.print_subject"/>
                    <t t-set="subject" t-value="o.subject"/>
                    <t t-set="success_story" t-value="o.success_story_id"/>
                    <t t-set="body_html" t-value="o.body_html"/>
                    <t t-set="user" t-value="o.user_id"/>
                    <t t-set="show_signature" t-value="o.show_signature and user.digital_signature"/>
                    <t t-set="product" t-value="o.product_id.with_context(lang=partner.lang)"/>
                    <t t-call="partner_communication_reminder.partner_communication_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>
        <template id="communication_style">
            <t t-set="custom_css">
                #header {
                position: absolute;
                margin-left: 15mm;
                <t t-if="bvr or print_header">
                    margin-top: 20mm;
                </t>
                height: 45mm;
                font-size: 8pt;
                }
                #logo {
                display: inline-block;
                width: 50mm;
                height: 20mm;
                }
                #logo img {
                max-width: 100%;
                max-height: 100%;
                margin: auto;
                }
                #compassion_address {
                float: left;
                margin-top: 10mm;
                font-size: 8pt;
                }
                #title {
                text-decoration: underline;
                margin-bottom: 2mm;
                }
                #address {
                margin-top: 8mm;
                }
                #letter {
                position: absolute;
                font-family: "millerLight";
                font-size:<t t-esc="font_size or '10'"/>pt;
                color: black;
                top: 40mm;
                <t t-if="success_story">
                    margin-left: 11mm;
                    margin-right: 1mm;
                    <t t-if="not bvr">
                        margin-bottom: 6mm;
                    </t>
                </t>
                <t t-if="not success_story">
                    margin-left: 25mm;
                    margin-right: 15mm;
                    <t t-if="not bvr">
                        margin-bottom: 20mm;
                    </t>
                </t>
                }
                .right {
                width: 44%;
                margin-left: auto;
                }
                .blue {
                color: #0054A6;
                font-weight: bold;
                }
                #pp {
                font-family: verdana;
                }
                #pp-box {
                display: inline-block;
                padding: 1mm;
                width: 50mm;
                line-height: initial;
                border-style: solid;
                border-width: 1pt;
                }
                #pp-box div:first-child{
                font-size: 12pt;
                font-weight: bold;
                }
                #pp-box div:last-child{
                font-size: 8pt;
                }
                #pp-post {
                display: inline-block;
                font-size: 6pt;
                }
                #pp hr {
                margin-top: 0.5mm;
                margin-bottom: 3mm;
                }
                #content {
                width: 100%;
                }
                #success-story {
                display: inline-block;
                margin-right: 5mm;
                vertical-align: top;
                padding: 3mm;
                width: 28%;
                min-height: 170mm;
                max-height: 170mm;
                background-color: #2B2B5D;
                color: white;
                font-size: 12pt;
                }
                #body {
                display: inline-block;
                line-height: 1.5;
                <t t-if="success_story">
                    width: 62%;
                </t>
                <t t-if="not display_pp and not print_header and not print_subject">
                    /* Put the text down to avoid showing in the address window */
                    margin-top: 9mm;
                </t>
                }
                .body_text {
                display: inline-block;
                margin-right: 2mm; /* omr code need nothing 5mm all over it */
                <t t-if="show_signature">
                    min-height: 120mm;
                </t>
                <t t-if="not show_signature">
                    min-height: 140mm;
                </t>
                }
                hr {
                margin-top: 0px;
                padding: 0mm;
                border: none;
                height: 1pt;
                background-color: black;
                <t t-if="success_story">
                    width: 90%;
                </t>
                }
                #success-story hr {
                background-color: white;
                }
                /* Format lists for PDF */
                ul {
                list-style: none;
                }
                ol {
                list-style-position: inside;
                }
                li {
                padding-left: 16px;
                }
                ul>li:before {
                content: "-";
                padding-right: 8px;
                }

                #thank_you_quote tr td:first-child {
                padding-right: 2mm;
                vertical-align: top;
                }
                #thank_you_quote tr td {
                vertical-align: middle;
                }
            </t>
            <t t-call="partner_communication_reminder.style"/>
        </template>

        <template id="partner_communication">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="success_story" t-value="docs.mapped('success_story_id')"/>
                    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                    <t t-set="print_header" t-value="o.print_header"/>
                    <t t-set="partner" t-value="o.partner_id"/>
                    <t t-set="print_subject" t-value="o.print_subject"/>
                    <t t-set="subject" t-value="o.subject"/>
                    <t t-set="success_story" t-value="o.success_story_id"/>
                    <t t-set="body_html" t-value="o.body_html"/>
                    <t t-set="user" t-value="o.user_id"/>
                    <t t-set="show_signature" t-value="o.show_signature and user.digital_signature"/>
                    <t t-call="partner_communication_reminder.partner_communication_document" t-lang="o.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="partner_communication_document_page">
            <t t-if="print_header">
                <div id="header">
                    <div id="logo">
                        <t t-set="lang" t-value="'multilingual.jpg'"/>
                        <t t-if="o and o.partner_id">
                            <!-- If generating communication header, partner is in o -->
                            <t t-set="partner" t-value="o.partner_id"/>
                        </t>
                        <!-- When generating tax_receipt, partner is defined but width is to be adapted -->
                        <t t-if="partner and partner.lang and partner.lang.split('_')[0] in ['fr', 'en', 'de', 'it']">
                            <t t-set="lang" t-value="partner.lang.split('_')[0] + '.png'"/>
                        </t>
                    </div>
                </div>
            </t>
            <div id="letter">
                <div id="date" t-if="not print_header">
                    <span t-raw="partner.date_communication" style="float: left; margin-top: 10mm; min-width: 70mm;"/>
                </div>
                <t t-if="print_header">
                    <div id="compassion_address">
                        <span class="blue">COMPASSION</span>
                        <span>, Rue Galil√©e 3, 1400 Yverdon-les-Bains</span>
                        <br/>
                        <span class="blue">TEL</span>
                        <span>.: 031 552 21 25</span>
                        <br/>
                        <span class="blue">MAIL</span>
                        <span>: info@compassion.ch</span>
                        <br/>
                        <span class="blue">WWW</span>
                        <span>.compassion.ch</span>
                    </div>
                </t>
                <div id="address" class="right">
                    <div id="pp" t-if="display_pp">
                        <div id="pp-box">
                            <div>P.P.</div>
                            <div>CH-1400 Yverdon-les-Bains</div>
                        </div>
                        <div id="pp-post">
                            <p>Poste CH SA</p>
                        </div>
                        <hr/>
                    </div>
                    <span t-raw="partner.address_name"/>
                    <br/>
                    <span t-raw="'&lt;br/&gt;'.join((partner.short_address or '&lt;br/&gt;').split('&lt;br/&gt;')[1:])"/>
                    <div id="date" t-if="print_header" t-attf-style="margin-top: #{'20' if display_pp else '25'}mm;">
                        <span t-raw="partner.date_communication"/>
                    </div>
                </div>

                <div id="title" t-if="print_subject" style="max-width: 80mm;">
                    <b>
                        <span t-raw="subject"/>
                    </b>
                </div>

                <div id="content">
                    <div id="success-story" t-if="success_story">
                        <t t-raw="success_story.body"/>
                    </div>
                    <div id="body">
                        <div t-raw="body_html" class="body_text"/>
                        <img t-if="show_signature" t-attf-src="data:image/jpg;base64,#{ user.digital_signature }"
                             class="right" t-attf-style="margin-left: #{ 20 if success_story else 65 }mm"/>
                    </div>
                </div>
            </div>

            <t t-if="product">
                <t t-set="bank_account" t-value="product.env['recurring.contract.group'].get_company_qrr_account()"/>
                <t t-set="position" t-value="0"/>

                <!-- Print BVR Fund -->
                <t t-if="product.with_context(lang='en_US').categ_name != 'Sponsorship'">
                    <t t-set="reference" t-value="partner.generate_bvr_reference(product)"/>
                    <t t-set="communication" t-value="product.name"/>
                    <t t-set="amount" t-value="False"/>
                    <t t-set="swissqr_position_top">192</t>
                    <t t-call="partner_communication_reminder.report_compassion_qr_slip"/>
                </t>
                <!-- Print BVR Sponsorship Due : if product is sponsorship, use sponsorship due template -->
                <t t-if="product.with_context(lang='en_US').categ_name == 'Sponsorship'">
                    <t t-call="partner_communication_reminder.report_bvr_due_document">
                        <t t-set="docs" t-value="o.get_objects()"/>
                        <t t-set="o" t-value="partner"/>
                        <t t-set="swissqr_position_top" t-value="192"/>
                    </t>
                </t>
            </t>
        </template>

        <template id="partner_communication_document">
            <t t-call="web.external_layout">
                <t t-set="report_header_style">display: none;</t>
                <t t-call="partner_communication_reminder.communication_style"/>
                <t t-call="partner_communication_reminder.partner_communication_document_page"/>
            </t>
        </template>

        <report id="report_blank_communication"
                model="partner.communication.job"
                string="Blank communication"
                report_type="qweb-pdf"
                name="partner_communication_reminder.blank_communication"
        />
        <record id="report_blank_communication" model="ir.actions.report">
            <field name="paperformat_id" ref="l10n_ch.paperformat_euro_no_margin"/>
        </record>

        <template id="blank_communication">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                    <t t-call="partner_communication_reminder.communication_style"/>
                    <div id="letter" style="position: absolute; left: 95mm; top: 55mm;">
                        <div id="pp" t-if="o.display_pp">
                            <div id="pp-box">
                                <div>P.P.</div>
                                <div>CH-1400 Yverdon-les-Bains</div>
                            </div>
                            <div id="pp-post">
                                <p>Poste CH SA</p>
                            </div>
                            <hr/>
                        </div>
                        <span t-raw="o.partner_id.short_address"/>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>

