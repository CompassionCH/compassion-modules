<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="sms_registration_successful" name="SMS registration success">
        <t t-call="website.layout">
            <div class="oe_structure donation_success">
                <div class="thank_you_container">
                    <div class="thank_you_text_container">
                        <h1>Registration successful !</h1>
                        <p class="quote">
                            You will receive a confirmation by e-mail very soon.
                        </p>
                    </div>
                </div>
                <t t-if="form.form_title">
                    <h2>
                        <span class="form_title" t-esc="form.form_title"/>
                    </h2>
                    <t t-if="form.form_description">
                        <p class="form_description" t-esc="form.form_description"/>
                    </t>
                    <t t-raw="form.form_render()"/>
                </t>
            </div>
        </t>
    </template>

    <template id="sms_registration_failure" name="SMS registration failure">
        <t t-call="website.layout">
            <t t-set="title">SMS sponsorship</t>
            <div id="wrap">
                <div class="container text-center">
                    <h1>Registration Failure</h1>
                    <p class="quote">
                        Something went wrong with your registration.
                        <br/>
                        <br/>
                        If the payment process was successful, please call us.
                    </p>
                </div>
            </div>
        </t>
    </template>
</odoo>
