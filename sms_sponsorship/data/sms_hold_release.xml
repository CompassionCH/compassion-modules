<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="release_booking_by_sms" model="ir.actions.server">
        <field name="name">Release booking by sms</field>
        <field name="model_id" ref="model_compassion_hold"/>
        <field name="state">code</field>
        <field name="code">object.release_sms_booking()</field>
    </record>
    <record id="release_booking_by_sms_rule" model="base.action.rule">
        <field name="name">Release after 15min</field>
        <field name="model_id" ref="model_compassion_hold"/>
        <field name="kind">on_time</field>
        <field name="trg_date_id" ref="field_compassion_hold_booked_by_sms_at"/>
        <field name="trg_date_range">15</field>
        <field name="trg_date_range_type">minutes</field>
        <field name="server_action_ids" eval="[(6, 0, [ref('release_booking_by_sms')])]"/>
    </record>
</odoo>
