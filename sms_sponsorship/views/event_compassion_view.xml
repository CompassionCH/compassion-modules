<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="view_events_form" model="ir.ui.view">
       <field name="name">crm.event.compassion.form</field>
       <field name="model">crm.event.compassion</field>
       <field name="inherit_id" ref="crm_compassion.view_events_form"/>
       <field name="arch" type="xml">
           <xpath expr="//field[@name='planned_sponsorships']" position="after">
               <field name="disable_childpool_search"/>
           </xpath>
           <xpath expr="//field[@name='planned_sponsorships']" position="after">
               <field name="accepts_sms_booking"/>
           </xpath>
       </field>
   </record>
</odoo>
