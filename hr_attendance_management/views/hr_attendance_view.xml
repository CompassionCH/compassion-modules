<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record model="ir.ui.view"
            id="hr_attendance_calendar_view_form">
        <field name="name">HR Attendance Worked Calendar Form View</field>
        <field name="model">hr.attendance</field>
        <field name="priority"
               eval="20"/>
        <field name="inherit_id"
               ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch"
               type="xml">
            <field name="check_out"
                   position="after">
                <field name="location_id"/>
                <field name="worked_hours"
                       widget="float_time"/>
                <field name="attendance_day_id"/>
                <field name="working_schedule_id"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view"
            id="hr_attendance_kanban">
        <field name="name">HR Attendance Kanban View</field>
        <field name="model">hr.attendance</field>
        <field name="type">kanban</field>
        <field name="arch"
               type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_vignette">
                            <div class="oe_kanban_details">
                                <div class="oe_product_desc">
                                    <a type="open">
                                        <h4>
                                            <field name="employee_id"/>
                                        </h4>
                                    </a>
                                    <table>
                                        <tr>
                                            <td>Check in:</td>
                                            <td>
                                                <field name="check_in"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Check out:</td>
                                            <td>
                                                <field name="check_out"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Logged hours:</td>
                                            <td>
                                                <field name="worked_hours"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Location:</td>
                                            <td>
                                                <field name="location_id"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_attendance_tree_location" model="ir.ui.view">
        <field name="name">hr.attendance.tree.location</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">
            <field name="check_out" position="after">
                <field name="location_id"/>
            </field>
        </field>
    </record>

    <!-- actions -->
    <record id="hr_attendance.hr_attendance_action"
            model="ir.actions.act_window">
        <field name="name">Attendances</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{"search_default_today":1}</field>
        <field name="search_view_id"
               ref="hr_attendance.hr_attendance_view_filter"/>
        <field name="help"
               type="html">
            <p>The attendance records of your employees will be displayed
                here.
            </p>
            <p>Please make sure you're using the correct filter if you expected
                to see any.
            </p>
        </field>
    </record>
</odoo>
