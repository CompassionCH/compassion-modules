<odoo>
    <record model="ir.ui.view" id="hr_history_periods_from_employee">
        <field name="name">HR History Tree View</field>
        <field name="model">hr.employee.period</field>
        <field name="priority">25</field>
        <field name="arch" type="xml">
            <tree>
                <field name="start_date" />
                <field name="end_date_display" />
                <field name="balance" widget="float_time" type="char" />
                <field name="final_balance" widget="float_time" type="char" />
                <field name="lost" widget="float_time" type="char" />
                <field name="continuous_cap" type="boolean"/>
            </tree>
        </field>
    </record>
</odoo>