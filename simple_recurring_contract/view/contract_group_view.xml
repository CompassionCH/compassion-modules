<openerp>
<data>
	<!-- Contract form view -->
	<record id="view_group_contract_form" model="ir.ui.view">
		<field name="name">group.contract.form</field>
		<field name="model">simple.recurring.contract.group</field>
		<field name="arch" type="xml">
			<form string="Contract groups" version="7.0">
			<sheet>
				<group>
					<group>
						<field name="next_invoice_date" />
						<label for="recurring_value" />
						<div>
							<field name="recurring_value" class="oe_inline" />
							<field name="recurring_unit" class="oe_inline" />
						</div>
						<field name="advance_billing" />
					</group>
					<group>
						<field name="partner_id" domain="[('customer', '=', True)]"/>
						<field name="payment_term_id" />
					</group>
				</group>
				<h2>Contracts</h2>
				<field name="contract_ids" />
			</sheet>
			</form>
		</field>
	</record>
</data>
</openerp>
