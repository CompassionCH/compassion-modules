<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- TODO: move -->
        <!-- Top menu item -->
        <menuitem name="SendGrid"
                  id="menu_sendgrid_root" groups="base.group_erp_manager"/>
        <menuitem id="menu_sendgrid_section" parent="menu_sendgrid_root"
                  name="SendGrid"/>

        <!-- Form view -->
        <record id="view_sendgrid_email_form" model="ir.ui.view">
            <field name="name">sendgrid.email.form</field>
            <field name="model">sendgrid.email</field>
            <field name="arch" type="xml">
                <form string="Email">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="send" string="Send" type="object" states="new" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group colspan="2" col="2">
                            <field name="email_to"/>
                            <field name="email_from"/>
                            <field name="cc_address"/>
                            <separator colspan="2"/>
                            <field name="subject"/>
                            <field name="layout_template_id"/>
                            <field name="text_template_id"/>
                            <field name="sent_date" readonly="1"/>
                        </group>

                        <notebook colspan="4">
                            <page string="Message body (HTML)">
                                <field name="body_html" nolabel="1"/>
                            </page>
                            <page string="Message body (Text)">
                                <field name="body_text" nolabel="1"/>
                            </page>
                        </notebook>

                        <field name="substitution_ids" widget="one2many_list"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="view_sendgrid_email_tree" model="ir.ui.view">
            <field name="name">sendgrid.email.tree</field>
            <field name="model">sendgrid.email</field>
            <field name="arch" type="xml">
                <tree string="Emails" colors="black:state == 'new'; gray:state == 'sent'">
                    <field name="email_to"/>
                    <field name="subject"/>
                    <field name="sent_date"/>
                    <field name="layout_template_id"/>
                    <field name="text_template_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Substitution line view -->
        <record id="view_sendgrid_substitution_line_tree" model="ir.ui.view">
            <field name="name">sendgrid.substitution.tree</field>
            <field name="model">sendgrid.substitution</field>
            <field name="arch" type="xml">
                <tree string="Template substitutions" editable="bottom">
                    <field name="key"/>
                    <field name="value"/>
                </tree>
            </field>
        </record>

        <!-- Action opening the tree view -->
        <record id="open_view_sendgrid_email_tree" model="ir.actions.act_window">
            <field name="name">Email</field>
            <field name="res_model">sendgrid.email</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_sendgrid_email_tree"/>
        </record>

        <menuitem id="menu_sendgrid_email" parent="menu_sendgrid_section"
                  name="SendGrid Emails"
                  action="sendgrid.open_view_sendgrid_email_tree"/>

    </data>
</openerp>
