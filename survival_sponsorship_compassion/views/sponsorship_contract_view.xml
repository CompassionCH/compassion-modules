<odoo>
    <record id="survival_sponsorship_product_filter_tree_view" model="ir.ui.view">
        <field name="name">survival.sponsorship.product.filter.tree</field>
        <field name="model">recurring.contract.line</field>
        <field name="inherit_id" ref="sponsorship_compassion.view_compassion_sponsorship_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="domain">
                    [('survival_sponsorship_sale', '=', active_ids[0].type == 'CSP')]
                </attribute>
                <attribute name="options">
                    {'colors': {'csp_': 'pink'}}
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
