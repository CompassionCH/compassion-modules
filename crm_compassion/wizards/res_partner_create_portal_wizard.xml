<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_partner_create_portal_wizard_form">
        <field name="name">res.partner.create.portal.wizard.form</field>
        <field name="model">res.partner.create.portal.wizard</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form>
                <p>If you comfirm this action, this partner will have an account on Odoo</p>
                <group>
                    <field name="send_communication"/>
                </group>
                <group>
                    <field name="config_id"  attrs="{'invisible': [('send_communication', '!=', True)]}"/>
                </group>
                <footer>
                    <button name="button_create_portal_user" string="Confirm" type="object" class="oe_highlight"/>
                    <button name="button_cancel" string="Cancel" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>