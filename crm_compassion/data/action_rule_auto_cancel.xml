<odoo>
    <record id="events_auto_cancel_invoice" model="base.automation">
        <field name="name">Events: Auto Cancel Invoice</field>
        <field name="model_id" ref="account.model_account_invoice"/>
        <field name="trigger">on_time</field>
        <field name="trg_date_id" ref="cms_form_compassion.field_account_invoice__auto_cancel_date"/>
        <field name="trg_date_range">0</field>
        <field name="trg_date_range_type">minutes</field>
        <field name="active" eval="True"/>
        <field name="filter_domain">[["auto_cancel_date","!=",False]]</field>
        <field name="state">code</field>
        <field name="code">records.auto_cancel()</field>
    </record>
</odoo>
