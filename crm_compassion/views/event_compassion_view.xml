<odoo>
    <!-- Events tree view -->
    <record id="view_events_tree" model="ir.ui.view">
        <field name="name">crm.event.compassion.tree</field>
        <field name="model">crm.event.compassion</field>
        <field name="priority" eval="8" />
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="type" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="partner_id" />
                <field name="user_id" />
                <field name="currency_id" invisible="1" />
                <field
          name="total_income"
          sum="Income"
          widget="monetary"
          options="{'currency_field': 'currency_id'}"
        />
                <field
          name="total_expense"
          sum="Expense"
          widget="monetary"
          options="{'currency_field': 'currency_id'}"
        />
                <field
          name="balance"
          sum="Balance"
          widget="monetary"
          options="{'currency_field': 'currency_id'}"
        />
                <field name="won_sponsorships" sum="Won Sponsorships" />
                <field
          name="conversion_rate"
          widget="progressbar"
          avg="Average conversion"
        />
            </tree>
        </field>
    </record>

    <!-- Events form view -->
    <record id="view_events_form" model="ir.ui.view">
        <field name="name">crm.event.compassion.form</field>
        <field name="model">crm.event.compassion</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
            name="allocate_children_action"
            type="object"
            string="Allocate children"
            colspan="2"
            context="{'number_allocate_children': number_allocate_children}"
          />
                </header>
                <sheet>
                    <div class="oe_button_box" name="buttons">
                        <button
              name="show_children"
              type="object"
              class="oe_stat_button"
              icon="fa-child"
            >
                            <field
                name="effective_allocated"
                widget="statinfo"
                string="Children"
              />
                        </button>
                        <button
              name="show_sponsorships"
              type="object"
              class="oe_stat_button"
              icon="fa-link"
            >
                            <field
                name="won_sponsorships"
                widget="statinfo"
                string="Sponsorships"
              />
                        </button>
                        <button
              name="show_expenses"
              type="object"
              class="oe_stat_button"
              icon="fa-credit-card"
            >
                            <field
                name="total_expense"
                widget="statinfo"
                string="Expenses"
              />
                        </button>
                        <button
              name="show_income"
              type="object"
              class="oe_stat_button"
              icon="fa-money"
            >
                            <field
                name="total_income"
                string="Income"
                widget="statinfo"
              />
                        </button>
                    </div>
                    <div class="d-flex align-items-center" style="">
                        <h1 class="mr-4 pt-2">
                            <field
                name="name"
                default_focus="1"
                placeholder="Event name..."
              />
                        </h1>
                        <field
              name="conversion_rate"
              widget="percentpie"
              class="mx-4"
            />
                        <field name="currency_id" invisible="1" />
                        <label for="balance" class="mb-2" />
                        <field
              name="balance"
              widget="monetary"
              options="{'currency_field': 'currency_id'}"
            />
                    </div>
                    <div class="oe_header">
                    </div>
                    <group>
                        <group>
                            <field name="type" widget="selection_badge" />
                        </group>
                        <group>
                            <field
                name="start_date"
                widget="daterange"
                options="{'related_end_date': 'end_date'}"
              />
                            <field
                name="end_date"
                widget="daterange"
                options="{'related_start_date': 'start_date'}"
              />
                            <field name="communication_config_id" />
                            <field name="ambassador_config_id" />
                        </group>
                        <group class="oe_red">
                            <field
                name="number_allocate_children"
                widget="numeric_step"
                options="{'step': 10, 'min': 0}"
              />
                            <field
                name="planned_sponsorships"
                widget="numeric_step"
                options="{'step': 10, 'min': 0}"
              />
                        </group>
                        <group>
                            <field name="lead_id" />
                            <field
                name="user_id"
                widget="many2one_avatar_user"
              />
                            <field name="company_id" />
                        </group>
                        <group>
                            <label for="partner_id" />
                            <div>
                                <field
                  name="partner_id"
                  options="{'no_quick_create': true}"
                />
                                <br class="oe_read_only" />
                                <field name="street" placeholder="Street..." />
                                <br class="oe_read_only" />
                                <field name="zip_id" />
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Staff">
                            <field name="staff_ids" />
                        </page>
                        <page string="Internal Notes">
                            <field name="description" />
                        </page>
                        <page string="Marketing">
                            <group>
                                <field name="campaign_id" />
                                <field name="analytic_id" readonly="1" />
                            </group>
                        </page>
                        <page string="Allocation configuration">
                            <group>
                                <field name="hold_start_date" />
                                <field name="hold_end_date" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field
            name="message_follower_ids"
            widget="mail_followers"
          />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_event_filter" model="ir.ui.view">
        <field name="name">crm.event.compassion.select</field>
        <field name="model">crm.event.compassion</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="type" />
                <field name="lead_id" />
                <field name="partner_id" />
                <field name="zip_id" />
                <field name="user_id" />
                <group expand="0" string="Group By...">
                    <filter
            string="Type"
            name="type"
            domain="[]"
            context="{'group_by':'type'}"
          />
                    <filter
            string="Customer"
            name="customer"
            domain="[]"
            context="{'group_by':'partner_id'}"
          />
                    <filter
            string="Responsible"
            name="responsible"
            domain="[]"
            context="{'group_by':'user_id'}"
          />
                    <filter
            string="Opportunity"
            name="opportunity"
            domain="[]"
            context="{'group_by':'lead_id'}"
          />
                    <filter
            string="Year"
            name="year"
            domain="[]"
            context="{'group_by':'year'}"
          />
                </group>
            </search>
        </field>
    </record>

    <!-- Events Calendar View -->
    <record model="ir.ui.view" id="view_events_calendar">
        <field name="name">Events Calendar</field>
        <field name="model">crm.event.compassion</field>
        <field name="priority" eval="2" />
        <field name="arch" type="xml">
            <calendar
        string="Compassion Events"
        date_start="start_date"
        date_stop="end_date"
        color="user_id"
        mode="month"
      >
                <field name="name" />
                <field name="partner_id" />
                <field name="user_id" avatar_field="image_128" />
                <field name="type" />
                <field name="planned_sponsorships" />
                <field name="won_sponsorships" />
            </calendar>
        </field>
    </record>

    <record id="action_update_won_sponsorships_count" model="ir.actions.server">
        <field name="name">Update won sponsorship count</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="model_id" ref="model_crm_event_compassion" />
        <field name="binding_model_id" ref="model_crm_event_compassion" />
        <field name="code">
            records.force_update_won_sponsorships_count()
        </field>
    </record>

    <!-- Sidebar action, called from menu_recurring_contract_form menuitem -->
    <record id="action_events_compassion" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.event.compassion</field>
        <field name="view_mode">calendar,tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No events.
            </p>
        </field>
    </record>

    <menuitem
    id="menu_events_compassion"
    name="Events"
    parent="crm.crm_menu_root"
    sequence="2"
    action="action_events_compassion"
  />
</odoo>
