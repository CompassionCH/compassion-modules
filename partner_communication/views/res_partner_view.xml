<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_partner_form">
        <field name="name">Partner Form Communication</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']">
                <button
          name="%(partner_communication.action_communication_job_partner)d"
          context="{'default_partner_id': active_id, 'search_default_partner_id': active_id, 'search_default_pending': 1}"
          type="action"
          class="oe_stat_button oe_inline"
          icon="fa-file-text-o"
          groups="base.group_user"
        >
                    <field
            name="communication_count"
            widget="statinfo"
            string="Communications"
          />
                </button>
            </xpath>
            <xpath
        expr="//page[@name='contact_addresses']/field[@name='child_ids']"
        position="before"
      >
                <group>
                    <field name="global_communication_delivery_preference" />
                </group>
            </xpath>
            <xpath
        expr="/form/sheet//div[hasclass('o_row')]/field[@name='parent_id']"
        position="before"
      >
                <label
          for="parent_id"
          class="oe_edit_only"
        >Related Company</label>
            </xpath>
        </field>
    </record>
</odoo>
