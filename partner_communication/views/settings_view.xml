<odoo>
    <record id="communication_settings_view" model="ir.ui.view">
        <field name="name">compassion.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100" />
        <field
      name="inherit_id"
      ref="base_setup.res_config_settings_view_form"
    />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='contacts_settings']" position="after">
                <block
          name="communication_settings"
          title="Partner communication"
        >
                    <h2>Features</h2>
                    <setting
            string="Phonecall Plugin"
            help="Link communications with CRM phonecalls"
            documentation=""
          >
                        <field name="module_partner_communication_crm_phone" />
                    </setting>
                    <setting
            string="OMR Plugin"
            help="Add marks to printed communications for using folding machines."
            documentation=""
          >
                        <field name="module_partner_communication_omr" />
                    </setting>

                </block>
            </xpath>
        </field>
    </record>

    <record id="open_settings_communication" model="ir.actions.act_window">
        <field name="name">General settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="communication_settings_view" />
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field
      name="context"
    >{'module' : 'partner_communication', 'bin_size': False}</field>
    </record>

    <menuitem
    id="menu_communication_settings"
    action="open_settings_communication"
    parent="menu_communication_settings_root"
    sequence="50"
  />
</odoo>
