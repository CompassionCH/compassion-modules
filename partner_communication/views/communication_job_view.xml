<odoo>
    <record model="ir.ui.view" id="communication_job_form">
        <field name="name">communication.job.form</field>
        <field name="model">partner.communication.job</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field
            name="state"
            widget="statusbar"
            statusbar_visible="pending,done"
          />
                    <field name="printed_pdf_data" invisible="1" />
                    <button
            name="send"
            string="Send Now"
            icon="fa-envelope"
            type="object"
            class="oe_highlight"
            invisible="send_mode != 'digital' or state != 'pending' or not id"
          />
                    <button
            name="send"
            string="Send Now"
            icon="fa-envelope"
            type="object"
            class="oe_highlight"
            invisible="send_mode != 'both' or state != 'pending' or not id"
            context="{'origin': 'both_email'}"
          />
                    <button
            name="send"
            string="Print Now"
            icon="fa-print"
            type="object"
            class="oe_highlight"
            invisible="send_mode != 'physical' or state != 'pending' or not id"
          />
                    <button
            name="send"
            string="Print Now"
            icon="fa-print"
            type="object"
            class="oe_highlight"
            invisible="send_mode != 'both' or state != 'pending' or not id"
            context="{'origin': 'both_print'}"
          />
                    <button
            name="download_data"
            string="Download printed file"
            type="object"
            icon="fa-download"
            invisible="not printed_pdf_data"
          />
                    <button
            name="reset"
            string="Retry"
            type="object"
            invisible="state not in ('done', 'cancel', 'failure')"
          />
                    <button
            name="cancel"
            string="Cancel"
            type="object"
            invisible="state != 'pending' or not id"
          />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
              name="refresh_text"
              string="Refresh"
              type="object"
              icon="fa-refresh"
              class="oe_stat_button"
              invisible="not id"
            />
                        <button
              name="preview_pdf"
              string="Preview"
              type="object"
              icon="fa-search-plus"
              class="oe_stat_button"
              invisible="state != 'pending'"
            />
                        <button
              name="open_related"
              string="Go to records"
              type="object"
              icon="fa-folder-open-o"
              class="oe_stat_button"
              invisible="not id"
            />
                    </div>
                    <group>
                        <group>
                            <field name="model" invisible="1" />
                            <field
                name="config_id"
                domain="[('model', '=', model)]"
                readonly="state == 'done'"
              />
                            <field name="user_id" readonly="state == 'done'" />
                            <field
                name="partner_id"
                readonly="state == 'done'"
              />
                            <field name="company_id" invisible="1" />
                        </group>
                        <group>
                            <field name="sent_date" readonly="1" />
                            <field
                name="send_mode"
                required="1"
                readonly="state == 'done'"
              />
                            <field
                name="email_id"
                readonly="1"
                invisible="not email_id"
              />
                            <field
                name="pdf_page_count"
                invisible="send_mode != 'physical'"
              />
                        </group>
                    </group>
                    <notebook>
                        <page string="Content">
                            <group class="mb-4">
                                <group>
                                    <field
                    name="subject"
                    readonly="state == 'done' or not id"
                  />
                                    <field
                    name="email_from"
                    readonly="state == 'done' or not id"
                    invisible="send_mode not in ('both', 'digital')"
                  />
                                </group>
                                <group>
                                    <field
                    name="reply_to"
                    readonly="state == 'done' or not id"
                    invisible="send_mode not in ('both', 'digital')"
                  />
                                </group>
                                <field
                  name="body_html"
                  widget="html"
                  readonly="state == 'done' or not id"
                />
                            </group>
                                <field
                name="ir_attachment_tmp"
                widget="many2many_binary"
                class="oe_edit_only"
                nolabel="1"
                readonly="state == 'done'"
              />
                                <field
                name="ir_attachment_ids"
                context="{'default_res_model': 'partner.communication.job', 'default_res_id': id}"
                readonly="state == 'done'"
              >
                                    <tree create="false" editable="bottom">
                                        <field name="name" />
                                        <field name="report_id" />
                                        <field name="datas" />
                                        <field name="create_uid" />
                                        <field name="create_date" />
                                    </tree>
                                </field>
                        </page>
                        <page string="Configuration">
                            <group>
                                <group>
                                    <field
                    name="need_call"
                    readonly="state == 'done'"
                  />
                                    <field
                    name="report_id"
                    readonly="state == 'done'"
                  />
                                    <field
                    name="auto_send"
                    readonly="state == 'done'"
                  />
                                </group>
                            </group>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="communication_job_tree">
        <field name="name">communication.job.tree</field>
        <field name="model">partner.communication.job</field>
        <field name="arch" type="xml">
            <tree
        decoration-primary="state == 'pending'"
        decoration-muted="state in ('done', 'cancel')"
        decoration-danger="need_call!=False and len(activity_ids) or state == 'failure'"
      >
                <field name="date" />
                <field name="config_id" />
                <field name="partner_id" />
                <field name="send_mode" />
                <field name="subject" />
                <field name="user_id" />
                <field name="state" />
                <field name="need_call" optional="hide" />
                <field name="sent_date" />
                <field name="activity_ids" column_invisible="1" />
                <button
          name="send"
          string="Send Now"
          type="object"
          icon="fa-paper-plane-o"
          invisible="state != 'pending'"
        />
                <button
          name="reset"
          string="Retry"
          type="object"
          icon="fa-undo"
          invisible="state not in ('done', 'cancel')"
        />
                <button
          name="cancel"
          string="Cancel"
          type="object"
          icon="fa-ban"
          invisible="state != 'pending'"
        />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="communication_job_search">
        <field name="name">communication.job.search</field>
        <field name="model">partner.communication.job</field>
        <field name="arch" type="xml">
            <search>
                <filter
          string="My Communications"
          name="my_communications"
          domain="[('user_id', '=', uid)]"
        />
                <separator />
                <field name="config_id" />
                <field name="partner_id" />
                <field name="user_id" />
                <filter
          string="Pending"
          name="pending"
          domain="[('state', 'in', ['pending','failure'])]"
        />
                <filter
          string="To Call"
          name="call"
          domain="[('need_call', '!=', False), ('activity_ids', '!=', False)]"
        />
                <filter
          string="Last 7 days sent communications"
          name="last7days"
          domain="[('sent_date','&lt;=',datetime.datetime.now()),('sent_date','&gt;=',datetime.datetime.now()-relativedelta(week=1))]"
        />                <separator />
                <filter
          string="Letters"
          name="digital"
          domain="[('send_mode', '=', 'physical')]"
        />
                <filter
          string="E-mails"
          name="physical"
          domain="[('send_mode', '=', 'digital')]"
        />
                <group expand="0" string="Group By">
                    <filter
            string="Status"
            name="status"
            domain="[]"
            context="{'group_by':'state'}"
          />
                    <filter
            string="Partner"
            name="partner"
            domain="[]"
            context="{'group_by':'partner_id'}"
          />
                    <filter
            string="Communication"
            name="config"
            domain="[]"
            context="{'group_by':'config_id'}"
          />
                </group>
            </search>
        </field>
    </record>

    <record id="action_communication_tree" model="ir.actions.act_window">
        <field name="name">Communications</field>
        <field name="res_model">partner.communication.job</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_communication_job" model="ir.actions.act_window">
        <field name="name">Communication Job</field>
        <field name="res_model">partner.communication.job</field>
        <field name="view_mode">tree,form</field>
        <field
      name="context"
    >{'search_default_my_communications': 1, 'search_default_pending': True, 'search_default_config': True, 'default_user_id': uid}</field>
    </record>

    <record id="action_communication_job_partner" model="ir.actions.act_window">
        <field name="name">Communication Job</field>
        <field name="res_model">partner.communication.job</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_user_id': uid}</field>
        <field name="domain">[('partner_id', '=', id)]</field>
    </record>

    <!-- Send communication actions -->
    <record id="send_action" model="ir.actions.server">
        <field name="name">Send communication</field>
        <field name="model_id" ref="model_partner_communication_job" />
        <field name="binding_model_id" ref="model_partner_communication_job" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">action = records.send()</field>
    </record>

    <!-- Refresh communication actions -->
    <record id="refresh_action" model="ir.actions.server">
        <field name="name">Refresh communication</field>
        <field name="model_id" ref="model_partner_communication_job" />
        <field name="binding_model_id" ref="model_partner_communication_job" />
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">records.refresh_text()</field>
    </record>

    <menuitem
    name="Partner Communication"
    id="menu_communication"
    parent="contacts.menu_contacts"
    sequence="1"
  />
    <menuitem
    name="Communication Jobs"
    parent="menu_communication"
    id="menu_communication_jobs"
    sequence="10"
    action="action_communication_job"
  />
</odoo>
