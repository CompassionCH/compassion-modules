<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Intervention Form View -->
    <record id="view_compassion_intervention_form" model="ir.ui.view">
        <field name="name">compassion.intervention.form</field>
        <field name="model">compassion.intervention</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field
            name="state"
            widget="statusbar"
            statusbar_visible="on_hold,committed,active,close"
          />
                    <button
            name="create_commitment"
            string="Commit Funds"
            type="object"
            invisible="state != 'on_hold'"
            class="oe_highlight"
          />
                    <button
            name="cancel_hold"
            string="Cancel Hold"
            type="object"
            invisible="not hold_id"
          />
                </header>
                <sheet>
                    <div class="oe_button_box" name="buttons">
                        <button
              name="get_infos"
              type="object"
              class="oe_stat_button"
              icon="fa-refresh"
              string="get infos"
              context="{'async_mode': False}"
            />

                        <button
              name="show_expenses"
              type="object"
              class="oe_stat_button"
              icon="fa-credit-card"
            >
                            <field
                name="total_expense"
                string="Expenses"
                widget="statinfo"
                readonly="1"
              />
                        </button>

                        <button
              name="show_income"
              type="object"
              class="oe_stat_button"
              icon="fa-money"
            >
                            <field
                name="total_income"
                string="Income"
                widget="statinfo"
                readonly="1"
              />
                        </button>

                        <button
              name="show_contract"
              type="object"
              class="oe_stat_button"
              icon="fa-external-link"
              string="Contract"
            />

                        <button
              name="show_partner"
              type="object"
              class="oe_stat_button"
              icon="fa-male"
              string="Partner"
            />
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="intervention_id" readonly="1" />
                            <field name="field_office_id" readonly="1" />
                            <field
                name="fcp_ids"
                widget="many2many_tags"
                readonly="1"
              />
                            <field
                name="additional_marketing_information"
                readonly="1"
              />
                            <field name="category_id" readonly="1" />
                            <field
                name="subcategory_ids"
                domain="[('category_ids', '=', category_id)]"
                readonly="1"
              />
                            <field name="type" readonly="1" />
                            <field
                name="parent_intervention_name"
                readonly="1"
              />
                        </group>
                        <group>
                            <field name="funding_status" readonly="1" />
                            <field name="intervention_status" readonly="1" />
                            <field
                name="disburse_without_commitment"
                readonly="1"
              />
                            <field name='company_id' />
                            <field
                name="funding_global_partners"
                readonly="1"
              />
                            <field
                name="service_level"
                readonly="state not in ('on_hold', 'sla')"
              />
                            <field name="cancel_reason" readonly="1" />
                            <field name="product_template_id" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget">
                            <group>
                                <group
                  string="Hold Information"
                  invisible="not hold_id"
                >
                                    <field name="hold_id" readonly="1" />
                                    <field
                    name="hold_amount"
                    widget="monetary"
                    options="{'currency_field': 'currency_usd'}"
                    readonly="state not in ('on_hold', 'sla')"
                  />
                  />
                                    <field
                    name="expiration_date"
                    readonly="state not in ('on_hold', 'sla')"
                  /> />
                                    <field
                    name="next_year_opt_in"
                    readonly="state not in ('on_hold', 'sla')"
                  />
                                    <field
                    name="user_id"
                    readonly="state not in ('on_hold', 'sla')"
                  />
                                    <field
                    name="secondary_owner"
                    readonly="state not in ('on_hold', 'sla')"
                  />
                                </group>
                                <group string="Previsions">
                                    <field name="currency_usd" invisible="1" />
                                    <field
                    name="estimated_costs"
                    widget="monetary"
                    options="{'currency_field': 'currency_usd'}"
                    readonly="1"
                  />
                                    <field
                    name="total_estimated_cost_local"
                    widget="monetary"
                    options="{'currency_field': 'local_currency_id'}"
                  />
                                    <field
                    name="estimated_impacted_beneficiaries"
                    readonly="1"
                  />
                                    <field
                    name="estimated_local_contribution"
                    widget="monetary"
                    options="{'currency_field': 'currency_usd'}"
                    readonly="1"
                  />
                                    <field
                    name="local_currency_id"
                    invisible="1"
                  />
                                </group>
                                <group string="Actual numbers">
                                    <field
                    name="total_cost"
                    widget="monetary"
                    options="{'currency_field': 'currency_usd'}"
                    readonly="1"
                  />
                                    <field
                    name="total_actual_cost_local"
                    widget="monetary"
                    options="{'currency_field': 'local_currency_id'}"
                  />
                                    <field
                    name="impacted_beneficiaries"
                    readonly="1"
                  />
                                    <field
                    name="local_contribution"
                    widget="monetary"
                    options="{'currency_field': 'currency_usd'}"
                    readonly="1"
                  />
                                    <field
                    name="requested_additional_funding"
                    widget="monetary"
                    options="{'currency_field': 'currency_usd'}"
                    readonly="1"
                  />
                                    <field
                    name="commitment_amount"
                    widget="monetary"
                    options="{'currency_field': 'currency_usd'}"
                    readonly="1"
                  />
                                    <field
                    name="commited_percentage"
                    widget="progressbar"
                    readonly="1"
                  />
                                    <field
                    name="total_amendment"
                    widget="monetary"
                    options="{'currency_field': 'currency_usd'}"
                  />
                                </group>
                            </group>
                        </page>
                        <page string="Schedule">
                            <group>
                                <group string="Start">
                                    <field name="is_fo_priority" readonly="1" />
                                    <field
                    name="proposed_start_date"
                    readonly="1"
                  />
                                    <field
                    name="start_no_later_than"
                    readonly="1"
                  />
                                    <field name="start_date" readonly="1" />
                                    <field
                    name="expected_duration"
                    readonly="1"
                  />
                                    <field
                    name="actual_duration"
                    readonly="1"
                  />
                                </group>
                                <group string="End">
                                    <field
                    name="initial_planned_end_date"
                    readonly="1"
                  />
                                    <field
                    name="planned_end_date"
                    readonly="1"
                  />
                                    <field name="end_date" readonly="1" />
                                </group>
                            </group>
                        </page>
                        <page string="SLA Negotiation">
                            <group>
                                <field
                  name="sla_negotiation_status"
                  readonly="1"
                />
                                <field
                  name="fo_proposed_sla_costs"
                  widget="monetary"
                  options="{'currency_field': 'currency_usd'}"
                  readonly="1"
                />
                                <field
                  name="approved_sla_costs"
                  widget="monetary"
                  options="{'currency_field': 'currency_usd'}"
                  readonly="1"
                />
                                <field name="sla_comments" readonly="1" />
                            </group>
                            <group>
                                <field
                  name="deliverable_level_1_ids"
                  widget="many2many_tags"
                />
                                <field
                  name="deliverable_level_2_ids"
                  widget="many2many_tags"
                  invisible="service_level != 'Level 2'"
                  readonly="1"
                />
                                <field
                  name="deliverable_level_3_ids"
                  widget="many2many_tags"
                  invisible="service_level != 'Level 3'"
                  readonly="1"
                />
                            </group>
                        </page>
                        <page string="Details">
                            <group>
                                <group>
                                    <field
                    name="problem_statement"
                    widget="html"
                    readonly="1"
                  />
                                    <field
                    name="background_information"
                    widget="html"
                    readonly="1"
                  />
                                    <field
                    name="objectives"
                    widget="html"
                    readonly="1"
                  />
                                    <field
                    name="success_factors"
                    widget="html"
                    readonly="1"
                  />
                                </group>
                                <group>
                                    <field
                    name="solutions"
                    widget="html"
                    readonly="1"
                  />
                                    <field
                    name="not_funded_implications"
                    widget="html"
                    readonly="1"
                  />
                                    <field
                    name="implementation_risks"
                    widget="html"
                    readonly="1"
                  />
                                </group>
                                <group
                  invisible="type not in ('Survival', 'Survival FY Details')"
                >
                                    <field name="survival_slots" readonly="1" />
                                    <field
                    name="launch_reason"
                    widget="html"
                    readonly="1"
                  />
                                    <field
                    name="mother_children_challenges"
                    widget="html"
                    readonly="1"
                  />
                                    <field
                    name="community_benefits"
                    widget="html"
                    readonly="1"
                  />
                                    <field
                    name="mother_average_age"
                    readonly="1"
                  />
                                    <field
                    name="household_children_average"
                    readonly="1"
                  />
                                    <field
                    name="under_five_population"
                    readonly="1"
                  />
                                    <field name="birth_medical" readonly="1" />
                                </group>
                                <group
                  invisible="type not in ('Survival', 'Survival FY Details')"
                >
                                    <field
                    name="spiritual_activity_ids"
                    widget="many2many_tags"
                    readonly="1"
                  />
                                    <field
                    name="cognitive_activity_ids"
                    widget="many2many_tags"
                    readonly="1"
                  />
                                    <field
                    name="physical_activity_ids"
                    widget="many2many_tags"
                    readonly="1"
                  />
                                    <field
                    name="socio_activity_ids"
                    widget="many2many_tags"
                    readonly="1"
                  />
                                    <field
                    name="activities_for_parents"
                    widget="html"
                    readonly="1"
                  />
                                    <field
                    name="other_activities"
                    widget="html"
                    readonly="1"
                  />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_compassion_intervention_tree" model="ir.ui.view">
        <field name="name">compassion.intervention.tree</field>
        <field name="model">compassion.intervention</field>
        <field name="arch" type="xml">
            <tree
        decoration-info="state=='on_hold'"
        decoration-muted="state in ('close','cancel')"
        decoration-success="state=='committed'"
        decoration-danger="state == 'sla'"
      >
                <field name="name" />
                <field name="category_id" />
                <field name="intervention_id" />
                <field name="field_office_id" />
                <field name="start_date" />
                <field name="description" />
                <field name="funding_status" />
                <field name="survival_slots" sum="Total" />
                <field name="total_cost" sum="Total" />
                <field name="commited_percentage" widget="progressbar" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="view_compassion_intervention_filter" model="ir.ui.view">
        <field name="name">compassion.intervention.select</field>
        <field name="model">compassion.intervention</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="category_id" />
                <field name="subcategory_ids" />
                <field name="fcp_ids" />
                <field name="field_office_id" />
                <field name="funding_status" />
                <field name="type" />
                <field name="state" />
                <filter
          name="active"
          string="Active"
          domain="[('state', 'not in', ['close', 'cancel'])]"
        />
                <group expand="0" string="Group By...">
                    <filter
            string="Category"
            name="category"
            domain="[]"
            context="{'group_by':'category_id'}"
          />
                    <filter
            string="Type"
            name="type"
            domain="[]"
            context="{'group_by':'type'}"
          />
                    <filter
            string="Funding Status"
            name="funding_status"
            domain="[]"
            context="{'group_by':'funding_status'}"
          />
                    <filter
            string="State"
            name="state"
            domain="[]"
            context="{'group_by':'state'}"
          />
                </group>
            </search>
        </field>
    </record>

    <!-- Commitment Wizard -->
    <record id="view_intervention_commitment_wizard_form" model="ir.ui.view">
        <field name="name">compassion.intervention.commitment.form</field>
        <field name="model">compassion.intervention.commitment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="usd" invisible="1" />
                    <field name="intervention_id" invisible="1" />
                    <field
            name="commitment_amount"
            widget="monetary"
            options="{'currency_field': 'usd'}"
          />
                </group>
                <div invisible="additional_fund_amount == 0">
                    <p
          >Additional fundings were requested by the National Office for this Intervention:</p>
                    <group>
                        <field
              name="additional_fund_amount"
              widget="monetary"
              options="{'currency_field': 'usd'}"
            />
                        <field name="additional_info" />
                        <field name="commit_to_additional_fund" />
                    </group>
                </div>
                <footer>
                    <button
            name="send_commitment"
            string="Send Commitment"
            type="object"
            class="oe_highlight"
          />
                </footer>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="open_view_intervention_tree" model="ir.actions.act_window">
        <field name="name">Interventions</field>
        <field name="res_model">compassion.intervention</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <record id="open_categories_action" model="ir.actions.act_window">
        <field name="name">Intervention Categories</field>
        <field name="res_model">compassion.intervention.category</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="open_subcategories_action" model="ir.actions.act_window">
        <field name="name">Intervention Subcategories</field>
        <field name="res_model">compassion.intervention.subcategory</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
    id="menu_interventions_section"
    parent="child_compassion.menu_field_section"
    name="Interventions"
    sequence="6"
  />

    <menuitem
    id="menu_interventions"
    parent="menu_interventions_section"
    name="Committed Interventions"
    action="open_view_intervention_tree"
    sequence="10"
  />

    <menuitem
    id="menu_interventions_categories"
    parent="menu_interventions_section"
    name="Categories"
    action="open_categories_action"
    sequence="50"
  />
    <menuitem
    id="menu_interventions_subcategories"
    parent="menu_interventions_section"
    name="Subcategories"
    action="open_subcategories_action"
    sequence="60"
  />
</odoo>
