<!-- oca-hooks:disable=xml-view-dangerous-replace-low-priority -->
<odoo>
    <record id="view_res_partner_invoice_line_button_form" model="ir.ui.view">
        <field name="name">res.partner.sponsorships.form</field>
        <field name="model">res.partner</field>
        <field
      name="inherit_id"
      ref="partner_personal_info.view_partner_form_compassion_personal"
    />
        <field name="priority">2</field>
        <field name="arch" type="xml">

            <!-- Add the church-->
            <field name="uuid" position="after">
                <field name="is_church" invisible="1" />
                <field
          name="church_id"
          attrs="{'invisible': ['|',('is_company','=',True),('is_church','=',True)]}"
        />
            </field>

            <!-- Replace parent position of reference and global numbers -->
            <field name="ref" position="replace" />
            <field name="type" position="before">
                <field name="ref" string="Internal Reference" />
                <field name="global_id" />
            </field>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button
          class="oe_inline oe_stat_button"
          type="object"
          name="open_contracts"
          icon="fa-book"
          groups="child_compassion.group_sponsorship"
        >
                    <field
            string="Sponsorships"
            name="number_sponsorships"
            widget="statinfo"
          />
                </button>
                <button
          class="oe_inline oe_stat_button"
          type="object"
          name="open_sponsored_children"
          icon="fa-child"
          groups="child_compassion.group_sponsorship"
        >
                    <field
            string="Sponsored children"
            name="number_children"
            widget="statinfo"
          />
                </button>
                <button name="unreconciled_transaction_items" type='object'
                        groups="account.group_account_user"
                        class="oe_inline oe_stat_button"
                        icon="fa-exchange">
                            <field name="unrec_items"
                                   string="Unreconciled Items"
                                   widget="statinfo"/>
                </button>
                <button name="receivable_transaction_items" type='object'
                        groups="account.group_account_user"
                        class="oe_inline oe_stat_button" icon="fa-exchange">
                            <field name="receivable_items" string="1050 Items"
                                   widget="statinfo"/>
                </button>
                <button
          class="oe_inline oe_stat_button"
          type="object"
          string="Sponsorship impact"
          groups="child_compassion.group_sponsorship"
          name="open_sponsorship_report"
          icon="fa-file-text-o "
        />
                <button
          class="oe_inline oe_stat_button"
          string="Forget me"
          groups="child_compassion.group_sponsorship"
          confirm="This will erase all data of the partner and will anonymize its name. This is not reversible. Do you confirm you want to do that?"
          type="object"
          name="forget_me"
          icon="fa-eraser"
        />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page
          string="Sponsorships"
          groups="child_compassion.group_sponsorship"
          autofocus="autofocus"
        >
                    <group>
                        <field name="portal_sponsorships" />
                    </group>
                    <button
            name="create_contract"
            string="New sponsorship"
            type="object"
            groups="child_compassion.group_sponsorship"
            class="my-2 btn-primary"
          />
                    <div
            groups="child_compassion.group_sponsorship"
            attrs="{'invisible' : [('contracts_paid','=', [])]}"
          >
                        <h3>Sponsorships as payer only</h3>
                        <field
              name="contracts_paid"
              context="{'default_type': 'S'}"
            >
                            <tree
                decoration-info="state == 'draft'"
                decoration-bf="state == 'active'"
                decoration-success="state == 'waiting'"
                decoration-muted="state in ('terminated','cancelled')"
              >
                                <button
                  name="open_contract"
                  type="object"
                  icon="fa-external-link"
                />
                                <field name="child_id" />
                                <field name="preferred_name" />
                                <field name="child_gender" />
                                <field name="child_age" />
                                <field name="create_date" />
                                <field name="start_date" />
                                <field name="end_date" />
                                <field name="payment_mode_id" />
                                <field name="group_freq" />
                                <field name="last_paid_invoice_date" />
                                <field name="total_amount" />
                                <field name="state" />
                                <field name="type" />
                            </tree>
                        </field>
                    </div>
                    <div
            groups="child_compassion.group_sponsorship"
            attrs="{'invisible' : [('contracts_correspondant','=', [])]}"
          >
                        <h3>Sponsorships as correspondent only</h3>
                        <field
              name="contracts_correspondant"
              context="{'default_type': 'S'}"
            >
                            <tree
                decoration-info="state == 'draft'"
                decoration-bf="state == 'active'"
                decoration-success="state == 'waiting'"
                decoration-muted="state in ('terminated','cancelled')"
              >
                                <button
                  name="open_contract"
                  type="object"
                  icon="fa-external-link"
                />
                                <field name="child_id" />
                                <field name="preferred_name" />
                                <field name="child_gender" />
                                <field name="child_age" />
                                <field name="create_date" />
                                <field name="start_date" />
                                <field name="end_date" />
                                <field name="payment_mode_id" />
                                <field name="group_freq" />
                                <field name="last_paid_invoice_date" />
                                <field name="total_amount" />
                                <field name="state" />
                                <field name="type" />
                            </tree>
                        </field>
                    </div>
                    <div
            groups="child_compassion.group_sponsorship"
            attrs="{'invisible' : [('contracts_fully_managed','=', [])]}"
          >
                        <h3>Sponsorships fully managed</h3>
                        <field
              name="contracts_fully_managed"
              context="{'default_type': 'S'}"
            >
                            <tree
                decoration-info="state == 'draft'"
                decoration-bf="state == 'active'"
                decoration-success="state == 'waiting'"
                decoration-muted="state in ('terminated','cancelled')"
              >
                                <button
                  name="open_contract"
                  type="object"
                  icon="fa-external-link"
                />
                                <field name="child_id" />
                                <field name="preferred_name" />
                                <field name="child_gender" />
                                <field name="child_age" />
                                <field name="create_date" />
                                <field name="start_date" />
                                <field name="end_date" />
                                <field name="payment_mode_id" />
                                <field name="group_freq" />
                                <field name="last_paid_invoice_date" />
                                <field name="total_amount" />
                                <field name="state" />
                                <field name="type" />
                            </tree>
                        </field>
                    </div>
                    <div
            groups="child_compassion.group_sponsorship"
            attrs="{'invisible' : [('other_contract_ids','=', [])]}"
          >
                        <h3>Other contracts</h3>
                        <field
              name="other_contract_ids"
              context="{'default_type': 'O'}"
            >
                            <tree
                decoration-info="state == 'draft'"
                decoration-bf="state == 'active'"
                decoration-success="state == 'waiting'"
                decoration-muted="state in ('terminated','cancelled')"
              >
                                <button
                  name="open_contract"
                  type="object"
                  icon="fa-external-link"
                />
                                <field name="display_name" />
                                <field name="create_date" />
                                <field name="start_date" />
                                <field name="end_date" />
                                <field name="payment_mode_id" />
                                <field name="group_freq" />
                                <field name="last_paid_invoice_date" />
                                <field name="total_amount" />
                                <field name="state" />
                                <field name="type" />
                            </tree>
                        </field>
                    </div>
                </page>
            </xpath>

            <!-- Add the church members list in a church partner -->
            <xpath expr="//page[2]" position="after">
                <page
          string="Members"
          attrs="{'invisible': ['|',('is_church','=',False), ('member_ids', '=', [])]}"
          autofocus="autofocus"
        >
                    <group>
                        <field name="church_member_count" />
                    </group>
                    <field
            name="member_ids"
            mode="kanban"
            context="{'default_church_id': active_id, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id}"
          />
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_res_partner_search" model="ir.ui.view">
        <field name="name">res.partner.supporter.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <filter name="type_company" position="after">
                <filter
          name="type_supporter"
          string="Supporters"
          domain="[('has_sponsorships', '=', True)]"
        />
            </filter>
        </field>
    </record>

    <record id="action_partner_supporter" model="ir.actions.act_window">
        <field name="name">Supporters</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[]</field>
        <field
      name="context"
    >{'res_partner_search_mode': 'customer', 'search_default_type_supporter': 1}</field>
    </record>
</odoo>
