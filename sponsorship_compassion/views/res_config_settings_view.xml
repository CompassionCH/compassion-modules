<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Configuration View -->
    <record id="view_settings" model="ir.ui.view">
        <field name="name">sponsorship_compassion.settings</field>
        <field name="model">res.config.settings</field>
        <field
      name="inherit_id"
      ref="message_center_compassion.compassion_settings"
    />
        <field name="arch" type="xml">
            <xpath expr="//app[@name='compassion_settings']">
                <block title="Sponsorship" name="sponsorship_settings">
                    <setting id="gift_duration_setting">
                        <field name="time_allowed_for_gifts" />
                    </setting>
                    <setting id="christmas_inv_gen_month_setting">
                        <field name="christmas_inv_gen_month" />
                    </setting>
                    <setting id="time_allowed_for_gifts_setting">
                        <field name="time_allowed_for_gifts" />
                    </setting>
                    <setting id="time_allowed_for_letters_setting">
                        <field name="time_allowed_for_letters" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
