<odoo>
    <record id="view_contract_group_form_compassion" model="ir.ui.view">
        <field name="name">contract.group.compassion.form</field>
        <field name="model">recurring.contract.group</field>
        <field
      name="inherit_id"
      ref="recurring_contract.view_group_contract_form"
    />
        <field eval="10" name="priority" />
        <field name="arch" type="xml">
            <group name="info" position="inside">
                <field name="contains_sponsorship" invisible="1" />
            </group>
            <field name="recurring_value" position="attributes">
                <attribute
          name="attrs"
        >{'readonly':[('contains_sponsorship', '=', True)]}</attribute>
            </field>
            <field name="recurring_unit" position="attributes">
                <attribute
          name="attrs"
        >{'readonly':[('contains_sponsorship', '=', True)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
