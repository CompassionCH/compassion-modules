<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
		<!-- Top menu item -->
		<menuitem name="Sponsorship"
			id="menu_sponsorship_root"
			groups="sponsorship_compassion.group_sponsorship"
			sequence="5"/>
		<menuitem id="menu_sponsorship_section" parent="menu_sponsorship_root" name="Sponsorship" sequence="5"/>
		<menuitem id="menu_sponsorship_children" parent="menu_sponsorship_section" name="Children" action="child_compassion.open_view_children_tree" sequence="0"/>
		<!--Compassion project form view -->
		<record id="view_compassion_project_form" model="ir.ui.view">
			<field name="name">compassion.project.form</field>
			<field name="model">compassion.project</field>
			<field name="arch" type="xml">
				<form string="project" version="7.0">
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only"/>
							<h1>
								<field name="name"/>
							</h1>
						</div>
						<div class="oe_right oe_button_box" name="button_box">
							<!-- Put here related buttons -->
						</div>
						<notebook>
							<page string="General Information">
								<group>
									<field name="code" />
								</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

		<record id="view_compassion_project_tree" model="ir.ui.view">
			<field name="name">compassion.project.tree</field>
			<field name="model">compassion.project</field>
			<field name="arch" type="xml">
				<tree string="project">
					<field name="name" />
					<field name="code" />
				</tree>
			</field>
		</record>
		 
		<record id="open_view_project_tree" model="ir.actions.act_window">
            <field name="name">project Structure</field>
            <field name="res_model">compassion.project</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="view_compassion_project_tree"/>
            <!--<field name="search_view_id" ref="view_compassion_project_filter"/>-->
        </record>
		
		<menuitem id="menu_sponsorship_project" parent="menu_sponsorship_section" name="Projects" action="open_view_project_tree" sequence="1"/>
    </data>
</openerp>
