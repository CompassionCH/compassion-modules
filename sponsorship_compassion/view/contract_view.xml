<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_recurring_contract_tree_compassion" model="ir.ui.view">
			<field name="name">recurring.contract.compassion.tree</field>
			<field name="model">recurring.contract</field>
			<field name="inherit_id" ref="recurring_contract.view_recurring_contract_tree"/>
			<field eval="18" name="priority"/>
			<field name="arch" type="xml">
				<data>
					<tree string="Contracts" position="attributes">
						<attribute name="colors">blue:state == 'draft';green:state == 'waiting';black:state == 'active';gray:state in ('terminated','cancelled')</attribute>
					</tree>
					<field name="partner_id" position="after">
						<field name="child_code" />
						<field name="child_name" />
					</field>
					<field name="partner_id" position="before">
						<field name="partner_codega" invisible="context.get('partner_contracts_view')" />
					</field>
                    <field name="payment_term_id" position="after">
                        <field name="frequency" />
                    </field>
                    <field name="state" position="after">
                        <button name="open_contract" type="object" invisible="not context.get('partner_contracts_view')" icon="STOCK_JUMP_TO" />
                    </field>
					<field name="reference" position="replace" />
				</data>
			</field>
		</record>
		
		<record id="view_recurring_contract_form_compassion" model="ir.ui.view">
			<field name="name">recurring.contract.compassion.form</field>
			<field name="model">recurring.contract</field>
			<field name="inherit_id" ref="recurring_contract.view_recurring_contract_form"/>
			<field eval="18" name="priority"/>
			<field name="arch" type="xml">
                <!-- Modify header to add the waiting state -->
                <field name="state" position="attributes">
                    <attribute name="statusbar_visible">draft,active,waiting,terminated</attribute>
                </field>

                <button name="contract_terminated" position="replace">
                     <button name="%(action_end_sponsorship)d" states="waiting,active" type="action" string="Terminate" class="oe_highlight" />
                </button>
                
				<!-- Add child_id in contract -->
                <field name="group_id" position="after">
					<field name="child_id" domain="[('state', 'in', ('N', 'R'))]"
                           options="{'create': false, 'm2o_dialog': false, 'create_edit': false}"/>
				</field>
                
                <!-- Add first payment date -->
                <field name="end_date" position="before">
                    <field name="first_payment_date" />
                </field>
                
                <!-- Add ending_reason -->
                <field name="end_date" position="after">
                    <field name="end_reason" states="terminated,cancelled"/>
                </field>
                
                <!-- Add correspondent and sponsor contract number -->
                <field name="group_id" position="after">
                    <field name="correspondant_id" options="{'create': false, 'm2o_dialog': false}"/>
                    <field name="num_pol_ga" invisible="True" />
                </field>
                
                <!-- Remove next_invoice_date if contract is not active -->
                <field name="next_invoice_date" position="attributes">
                    <attribute name="states">draft, waiting, active</attribute>
                </field>
                
                <!-- Remove quick create options for related partner -->
                <field name="partner_id" position="attributes">
                    <attribute name="options">{'create': false, 'm2o_dialog': false}</attribute>
                </field>
                
                <!-- Track when sponsorship products are added in contract -->
                <field name="contract_line_ids" position="replace">
                        <field name="contract_line_ids" widget="one2many_list" on_change="on_change_lines(contract_line_ids, child_id)" />
                </field>
			</field>
		</record>
		
		<record id="view_recurring_contract_compassion_filter" model="ir.ui.view">
			<field name="name">recurring.contract.compassion.select</field>
			<field name="model">recurring.contract</field>
			<field name="inherit_id" ref="recurring_contract.view_recurring_contract_filter" />
			<field name="arch" type="xml">
				<data>
					<search string="Search contract" position="inside">
						<field name="partner_codega" string="Partner reference"/>
						<field name="child_code" string="Child code" />
						<field name="child_name" string="Child name" />
					</search>
                    <xpath expr="//filter[@name='draft']" position="after">
                        <filter name="waiting" string="Waiting" domain="[('state','=','waiting')]" help="Waiting Payment Contracts"/>
                    </xpath>
                    <xpath expr="//filter[@name='terminated']" position="after">
                        <filter name="cancelled" string="Cancelled" domain="[('state','=','cancelled')]" help="Cancelled Contracts"/>
                    </xpath>
				</data>
			</field>
		</record>
        
        <!-- Move the Contracts Menu to the Sponsorship Section -->
        <menuitem id="recurring_contract.menu_contracts_section" parent="child_compassion.menu_sponsorship_root" 
                  name="Contracts" groups="child_compassion.group_sponsorship" sequence="1"/>
                  
        <!-- Generate Gift -->
        <act_window id="action_account_invoice_free"
            key2="client_action_multi" name="Generate Gift"
            res_model="generate.gift.wizard" src_model="recurring.contract"
            view_mode="form" target="new" view_type="form"
            />
	</data>
</openerp>
