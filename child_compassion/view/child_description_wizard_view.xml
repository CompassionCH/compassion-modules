<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record id="view_child_description_wizard" model="ir.ui.view">
			<field name="name">compassion.child.description.wizard</field>
			<field name="model">child.description.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Description generation" version="7.0">
                    <group col='2'>
                        <notebook>
                            <page string="Translations">
                                <group string="Complete missing translations if needed">
                                    <field name="child_property_value_ids" nolabel="1" />
                                </group>
                            </page>
                            <page string="Case studies">
                                <field name="case_study_ids"/>
                            </page>
                        </notebook>
                        <group string="Check and select descriptions to validate" col='2'>
                            <field name="keep_desc_fr"/>
                            <group col='1' colspan='2'><field name="desc_fr" attrs="{'invisible':[('keep_desc_fr','=',False)]}"/></group>
                  
                            <field name="keep_desc_de"/>
                            <group col='1' colspan='2'><field name="desc_de" attrs="{'invisible':[('keep_desc_de','=',False)]}"/></group>
                     
                            <field name="keep_desc_it"/>
                            <group col='1' colspan='2'><field name="desc_it" attrs="{'invisible':[('keep_desc_it','=',False)]}"/></group>
                      
                            <field name="keep_desc_en"/>
                            <group col='1' colspan='2'><field name="desc_en" attrs="{'invisible':[('keep_desc_en','=',False)]}"/></group>
                        </group>
                    </group>
					<footer>
						<button name="generate_descriptions" string="Generate" type="object" />
						<button name="validate_descriptions" class="oe_highlight" string="Finish" type="object" />
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
	</data>
</openerp>
