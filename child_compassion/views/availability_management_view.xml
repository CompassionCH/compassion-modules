<?xml version="1.0"?>
<openerp>
    <data>
        <!-- Configuration Views  Inside the Sponsorship -> Configuration Menu -->
        <menuitem id="menu_configuration" parent="menu_sponsorship_root"
                  name="Configuration" sequence="15"
                  groups="message_center_compassion.group_gmc_manager"/>
        <menuitem id="child_config" name="Global Childpool" parent="menu_configuration"
                  sequence="1"/>
        <menuitem id="menu_communication_config" name="Communication"
                  parent="menu_configuration" sequence="2"/>


        <!-- Availability Management -->
        <record id="availability_management_settings" model="ir.ui.view">
            <field name="name">availability.management.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="child_compassion.compassion_settings"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='compassion_settings']" position='inside'>
                    <h2>Default hold durations</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-12 o_setting_box">
                            <div name="availability_management_settings">
                                <div class="o_setting_right_pane">

                                    <div class="row">
                                        <label class="col-md-3 o_light_label"
                                               for="consignment_hold_duration"/>
                                        <field name="consignment_hold_duration"/>
                                    </div>

                                    <div class="row">
                                        <label class="col-md-3 o_light_label"
                                               for="e_commerce_hold_duration"/>
                                        <field name="e_commerce_hold_duration"/>
                                    </div>

                                    <div class="row">
                                        <label class="col-md-3 o_light_label"
                                               for="no_money_hold_duration"/>
                                        <field name="no_money_hold_duration"/>
                                    </div>

                                    <div class="row">
                                        <label class="col-md-3 o_light_label"
                                               for="no_money_hold_extension"/>
                                        <field name="no_money_hold_extension"/>
                                    </div>

                                    <div class="row">
                                        <label class="col-md-3 o_light_label"
                                               for="reinstatement_hold_duration"/>
                                        <field name="reinstatement_hold_duration"/>
                                    </div>

                                    <div class="row">
                                        <label class="col-md-3 o_light_label"
                                               for="reservation_duration"/>
                                        <field name="reservation_duration"/>
                                    </div>

                                    <div class="row">
                                        <label class="col-md-3 o_light_label"
                                               for="reservation_hold_duration"/>
                                        <field name="reservation_hold_duration"/>
                                    </div>

                                    <div class="row">
                                        <label class="col-md-3 o_light_label"
                                               for="sponsor_cancel_hold_duration"/>
                                        <field name="sponsor_cancel_hold_duration"/>
                                    </div>

                                    <div class="row">
                                        <label class="col-md-3 o_light_label"
                                               for="sub_child_hold_duration"/>
                                        <field name="sub_child_hold_duration"/>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="open_view_availability_management_config"
                model="ir.actions.act_window">
            <field name="name">Availability Management Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="availability_management_settings"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'child_compassion'}</field>

        </record>

        <menuitem id="menu_availability_management_configuration"
                  name="Availability Management" parent="child_config"
                  action="open_view_availability_management_config"/>
    </data>
</openerp>
