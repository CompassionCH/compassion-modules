<openerp>
    <data>
        <record id="compassion_settings" model="ir.ui.view">
            <field name="name">staff.notification.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div name="notification_configuration"
                         class="app_settings_block"
                         data-string="Compassion"
                         string="Compassion"
                         data-key="child_compassion">
                        <h2>Notification configuration</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-12 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div name="disaster_alert">
                                        <label for="disaster_notify_ids" string="Disaster Alert" class="o_light_label"/>
                                        <field name="disaster_notify_ids" widget="many2many_tags"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="open_view_notification_config" model="ir.actions.act_window">
            <field name="name">Notification Configuration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_id" ref="compassion_settings"/>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'child_compassion'}</field>
        </record>

        <menuitem id="menu_notification_configuration" name="Staff Notifications" parent="menu_communication_config" action="open_view_notification_config"/>
    </data>
</openerp>
