<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Compassion field office form view -->
    <record id="view_field_office_learning_form" model="ir.ui.view">
        <field name="name">field.office.learning.form</field>
        <field name="model">field.office.learning</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="field_office_id"/>
                        <field name="sequence"/>
                        <field name="time"/>
                        <field name="title"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_field_office_learning_tree" model="ir.ui.view">
        <field name="name">field.office.learning.tree</field>
        <field name="model">field.office.learning</field>
        <field name="arch" type="xml">
            <tree>
                <field name="field_office_id"/>
                <field name="time"/>
                <field name="title"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
</odoo>
