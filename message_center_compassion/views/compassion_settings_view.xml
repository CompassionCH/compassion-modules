<odoo>
    <!-- This creates a "Compassion" settings block in general settings.
    Modules that inherit res.config.settings should add their settings here-->
    <record id="compassion_settings" model="ir.ui.view">
        <field name="name">compassion.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div name="compassion_settings"
                     class="app_settings_block"
                     data-string="Compassion"
                     string="Compassion"
                     data-key="sponsorship_compassion">
                </div>
            </xpath>
        </field>
    </record>

    <record id="notification_settings" model="ir.ui.view">
        <field name="name">staff.notification.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="message_center_compassion.compassion_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='compassion_settings']" position='inside'>
                <h2>Notification configuration</h2>
                <div class="row mt16 o_settings_container" name="notification_configuration">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div name="left_group" class="o_setting_right_pane">
                            <div name="translate" class="row">
                                <label for="translate_notify_ids" class="col-md-5 o_light_label"/>
                                <field name="translate_notify_ids" widget="many2many_tags"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div name="right_group" class="o_setting_right_pane"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="gmc_settings" model="ir.ui.view">
        <field name="name">gmc.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="message_center_compassion.compassion_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='compassion_settings']" position='inside'>
                <h2>Compassion Connect</h2>
                <div class="row mt16 o_settings_container" name="gmc_connect_configuration">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div name="left_group" class="o_setting_right_pane">
                            <div class="row">
                                <label for="connect_gpid" class="o_light_label col-md-4"/>
                                <field name="connect_gpid"/>
                            </div>
                            <div class="row">
                                <label for="connect_gpname" class="o_light_label col-md-4"/>
                                <field name="connect_gpname"/>
                            </div>
                            <div class="row">
                                <label for="connect_api_key" class="o_light_label col-md-4"/>
                                <field name="connect_api_key"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div name="right_group" class="o_setting_right_pane">
                            <div class="row">
                                <label for="connect_client" class="o_light_label col-md-4"/>
                                <field name="connect_client"/>
                            </div>
                            <div class="row">
                                <label for="connect_secret" class="o_light_label col-md-4"/>
                                <field name="connect_secret"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
