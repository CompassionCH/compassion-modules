<odoo>
    <!-- This creates a "Compassion" settings block in general settings.
    Modules that inherit res.config.settings should add their settings here-->
    <record id="compassion_settings" model="ir.ui.view">
        <field name="name">compassion.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="100" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app
          name="compassion_settings"
          data-string="Compassion"
          string="Compassion"
          groups="message_center_compassion.group_gmc_manager"
          logo="/child_compassion/static/description/icon.png"
        >
                    <block
            title="Compassion Connect"
            name="gmc_connect_configuration"
          >
                        <setting id="connect_gpid_setting">
                            <field name="connect_gpid" />
                        </setting>
                        <setting id="connect_gpname_setting">
                            <field name="connect_gpname" />
                        </setting>
                        <setting id="connect_api_key_setting">
                            <field name="connect_api_key" />
                        </setting>
                        <setting id="connect_client_setting">
                            <field name="connect_client" />
                        </setting>
                        <setting id="connect_secret_setting">
                            <field name="connect_secret" />
                        </setting>
                    </block>
                    <block
            title="Notification configuration"
            name="notification_configuration"
          >
                        <setting
              id="translation_setting"
              help="Users to notify when GMC terms are untranslated"
            >
                            <field
                name="translate_notify_ids"
                widget="many2many_tags"
              />
                        </setting>
                    </block>

                </app>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_message_center_settings">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field
      name="context"
    >{'module': 'compassion_settings', 'bin_size': False}</field>
    </record>

    <menuitem
    id="compassion_settings_menu"
    parent="menu_message_config"
    sequence="10"
    action="action_message_center_settings"
  />
</odoo>
