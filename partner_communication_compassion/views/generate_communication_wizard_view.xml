<odoo>
    <record
    model="ir.ui.view"
    id="generate_communication_wizard_sponsorship_form"
  >
        <field
      name="name"
    >generate.communication.wizard.sponsorship.form</field>
        <field name="model">partner.communication.generate.wizard</field>
        <field
      name="inherit_id"
      ref="partner_communication.generate_communication_wizard_form"
    />
        <field name="arch" type="xml">
            <field name="selection_domain" position="before">
                <field name="res_model" widget="radio" />
            </field>
            <field name="selection_domain" position="attributes">
                <attribute name="options">{'model': 'res_model'}</attribute>
                <attribute name="string">Selection</attribute>
            </field>
            <field name="partner_ids" position="after">
                <field
          name="sponsorship_ids"
          widget="many2many_tags"
          invisible="1"
        />
                <field
          name="partner_source"
          attrs="{'invisible': [('res_model', '!=', 'recurring.contract')]}"
          widget="radio"
        />
            </field>
            <field name="model_id" position="attributes">
                <attribute
          name="attrs"
        >{'required': [('res_model', '=', 'recurring.contract')]}</attribute>
                <attribute name="domain">[('model', '=', res_model)]</attribute>
            </field>
        </field>
    </record>

    <!-- Add action in sponsorships to generate communications -->
    <act_window
    id="action_generate_communication"
    name="Generate Communications"
    res_model="partner.communication.generate.wizard"
    binding_model="recurring.contract"
    view_mode="form"
    target="new"
    context="{'default_res_model': 'recurring.contract', 'default_selection_domain': [('id', 'in', active_ids)]}"
  />
</odoo>
