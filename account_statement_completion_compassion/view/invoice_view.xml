<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="bank_statement_view_form_compassion" model="ir.ui.view">
            <field name="name">invoice_compassion.view_form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form" />
            <field eval="16" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//sheet[@string='Invoice']/h1" position="after">
                    <div class="oe_right oe_button_box" name="buttons">
                        <button name="show_transactions" string="Show invoices" type="object" />
                        <button name="show_move_lines" string="Show unreconciled lines" type="object" />
                    </div>
                </xpath>
            </field>
         </record>
    </data>
</openerp>
