<odoo>
    <record id="view_smart_tags_kanban" model="ir.ui.view">
        <field name="name">smart.tags.kanban</field>
        <field name="model">smart.tags</field>
        <field name="arch" type="xml">
            <kanban default_group_by="tagger"
                    group_create='false'
                    group_delete='false'
                    group_edit="false"
                    quick_create='false'>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                            <div class="oe_kanban_vignette">
                                <div class='oe_kanban_card'>
                                    <h4>
                                        <a type="open">
                                            <field name="name"/>
                                            <field name="tagger"/>
                                        </a>
                                    </h4>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="view_smart_tags_form" model="ir.ui.view">
        <field name="name">smart.tags.form</field>
        <field name="model">smart.tags</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="related_data"/>
                    <field name="tagger"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
