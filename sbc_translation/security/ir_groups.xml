<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="module_category_translator" model="ir.module.category">
            <field name="name">Translation Platform</field>
            <field
        name="description"
      >Security groups for Translation Platform</field>
            <field name="sequence">1</field>
        </record>
        <record id="group_user" model="res.groups">
            <field name="name">User</field>
            <field
        name="comment"
      >the user will have access to the translation platform.</field>
            <field name="category_id" ref="module_category_translator" />
        </record>
        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field
        name="comment"
      >the user can manage the translation platform.</field>
            <field name="category_id" ref="module_category_translator" />
        </record>

        <!-- Add group to Administrator -->
        <record id="base.user_admin" model="res.users">
            <field name="groups_id" eval="[(4, ref('group_manager'))]" />
        </record>
    </data>
</odoo>
