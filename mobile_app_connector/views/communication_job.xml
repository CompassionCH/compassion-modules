<odoo>
    <record model="ir.ui.view" id="mobile_app_communication_job_form">
        <field name="name">mobile.app.communication.job.form</field>
        <field name="model">partner.communication.job</field>
        <field
      name="inherit_id"
      ref="partner_communication.communication_job_form"
    />
        <field name="arch" type="xml">
            <sheet>
                <notebook>
                    <page
            string="Mobile notification"
            attrs="{'invisible': [('firebase_registration_exists', '=', False)]}"
          >
                        <field
              name="firebase_registration_exists"
              attrs="{'invisible': 1}"
            />
                        <group>
                            <field name="mobile_notification_send" />
                        </group>
                        <group
              attrs="{'invisible': ['|', ('mobile_notification_send','=', False), ('mobile_notification_id', '!=', False)]}"
            >
                            <field
                name="mobile_notification_auto_send"
                attrs="{'required': [('mobile_notification_send','=', True), ('firebase_registration_exists','!=', False)]}"
              />
                            <field
                name="mobile_notification_title"
                attrs="{'required': [('mobile_notification_send','=', True), ('firebase_registration_exists','!=', False)]}"
              />
                            <field
                name="mobile_notification_body"
                attrs="{'required': [('mobile_notification_send','=', True), ('firebase_registration_exists','!=', False)]}"
              />
                            <field
                name="mobile_notification_destination"
                attrs="{'required': [('mobile_notification_send','=', True), ('firebase_registration_exists','!=', False)]}"
              />
                            <field
                name="mobile_notification_topic"
                attrs="{'required': [('mobile_notification_send','=', True), ('firebase_registration_exists','!=', False)]}"
              />
                        </group>
                        <group
              attrs="{'invisible': ['|', ('mobile_notification_send','=', False), ('mobile_notification_id', '=', False)]}"
            >
                            <field name="mobile_notification_id" />
                        </group>
                    </page>
                </notebook>
            </sheet>
        </field>
    </record>
</odoo>
