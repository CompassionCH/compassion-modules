<odoo>
    <!-- Tile views -->
    <record model="ir.ui.view" id="tile_form">
        <field name="name">mobile.app.tile.form</field>
        <field name="model">mobile.app.tile</field>
        <field name="arch" type="xml">
            <form>
                <header>

                </header>

                <sheet>
                    <label for="type_id" class="oe_edit_only"/>
                    <h2>
                        <field name="type_id" class="oe_inline" style="margin-right: 5px"/>
                        <field name="sub_type" class="oe_inline"/>
                    </h2>
                    <label for="subject" class="oe_edit_only"/>
                    <h1><field name="subject"/></h1>
                    <group>
                        <group>
                            <field name="body" widget="html" />
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                        </group>
                        <group>
                            <field name="action_destination" />
                            <field name="action_text" />
                            <field name="priority" />
                            <field name="view_order"/>
                            <field name="enabled"/>
                            <field name="param_1"/>
                            <field name="param_2"/>
                            <field name="param_3"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter oe_edit_only">
                    <h2>AIDE</h2>
                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                      <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingOne">
                          <h4 class="panel-title">
                            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-controls="collapseOne">
                              List of types
                            </a>
                          </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                          <div class="panel-body">
                                <p>The subtype sets the display style of the tile in the Mobile application.</p>
                                <img style="float:left;" src="/mobile_app_connector/static/src/img/Tiles_1.png" />
                                <img style="float:left;" src="/mobile_app_connector/static/src/img/Tiles_2.png" />
                          </div>
                        </div>
                      </div>
                      <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingTwo">
                          <h4 class="panel-title">
                            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                              Destination Action
                            </a>
                          </h4>
                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                          <div class="panel-body">
                            <ul class="list-group">
                              <li class="list-group-item">Youtube video opens (must contain video information, opens video)</li>
                              <li class="list-group-item">Login overlay (redirects to login)</li>
                              <li class="list-group-item">Stories and prayer with relevant blog at the top (opens the story and puts other blog posts at the bottom)</li>
                                <li class="list-group-item">Child selector (opens the list of children)</li>
                                <li class="list-group-item">Compass (opens the compass on the project page)</li>
                                <li class="list-group-item">Top of letters hub (opens the letter writing page)</li>
                                <li class="list-group-item">Give overlay (opens the donation page)</li>
                                <li class="list-group-item">Give a gift overlay (opens the child gift page)</li>
                                <li class="list-group-item">Feedback overlay (redirects to contact form for feedback)</li>
                                <li class="list-group-item">Photos overlay (opens the photos of child)</li>
                                <li class="list-group-item">Read overlay (opens a letter, text version)</li>
                                <li class="list-group-item">My Community (opens the project page)</li>
                                <li class="list-group-item">Individual child page (seems not working, opening the list of children instead of individual child)</li>
                            </ul>
                          </div>
                        </div>
                      </div>

                    </div>
                    <div class="alert alert-info" role="alert">Find help <a href="https://confluence.compassion.ch/display/AM/GET+Message">ONLINE</a></div>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="tile_tree">
        <field name="name">mobile.app.tile.tree</field>
        <field name="model">mobile.app.tile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="view_order"/>
                <field name="subject"/>
                <field name="type_id"/>
                <field name="priority"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
                <field name="enabled"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="tile_search">
        <field name="name">mobile.app.tile.search</field>
        <field name="model">mobile.app.tile</field>
        <field name="arch" type="xml">
            <search>
                <field name="subject"/>
                <field name="type_id"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" domain="[]" context="{'group_by':'type_id'}"/>
                    <filter string="PrioritÃ©" name="group_priority" domain="[]" context="{'group_by':'priority'}"/>
                    <filter string="Destination" name="group_destination" domain="[]" context="{'group_by':'action_destination'}"/>
                    <filter string="SubType" name="group_sub_type" domain="[]" context="{'group_by':'sub_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_mobile_app_tile" model="ir.actions.act_window">
        <field name="name">Tile</field>
        <field name="res_model">mobile.app.tile</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- Add menu for Tile -->
    <menuitem id="menu_mobile_app_tile_list"
              name="Tiles"
              parent="menu_mobile_app"
              action="action_mobile_app_tile"
              groups="sales_team.group_sale_manager"
              sequence="40"
    />
</odoo>
