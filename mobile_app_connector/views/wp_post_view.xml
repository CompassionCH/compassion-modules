<odoo>
    <!-- Add Top menu in Website Module -->
    <menuitem
    id="menu_mobile_app"
    name="Mobile App"
    parent="website.menu_website_configuration"
    sequence="2"
  />
    <menuitem
    id="menu_mobile_app_hub"
    name="Hub"
    parent="menu_mobile_app"
    sequence="1"
  />
    <menuitem
    id="menu_mobile_app_wp"
    name="Wordpress News"
    parent="menu_mobile_app"
    sequence="2"
  />

    <!-- WP Post views -->
    <record model="ir.ui.view" id="wp_post_form">
        <field name="name">wp.post.form</field>
        <field name="model">wp.post</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="post_type" />
                            <field
                name="category_ids"
                widget="many2many_tags"
              />
                            <field name="tile_type" />
                            <field name="lang" />
                            <field name="date" />
                        </group>
                        <group>
                            <field name="wp_id" />
                            <field name="url" />
                            <field name="image_url" />
                            <field name="display_on_hub" />
                            <field name="is_automatic_ordering" />
                            <field
                name="view_order"
                attrs="{'invisible': [('is_automatic_ordering', '==', True)]}"
              />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="wp_post_tree">
        <field name="name">wp.post.tree</field>
        <field name="model">wp.post</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date" />
                <field name="post_type" />
                <field name="category_ids" />
                <field name="tile_type" />
                <field name="lang" />
                <field name="display_on_hub" invisible="1" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="wp_post_search">
        <field name="name">wp.post.search</field>
        <field name="model">wp.post</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="lang" />
                <field name="post_type" />
                <field name="category_ids" />
                <field name="tile_type" />
                <separator />
                <filter
          name="active"
          string="Active"
          domain="[('display_on_hub', '=', True)]"
        />
                <group expand="0" string="Group By">
                    <filter
            string="Lang"
            name="group_lang"
            domain="[]"
            context="{'group_by':'lang'}"
          />
                    <filter
            string="Type"
            name="group_type"
            domain="[]"
            context="{'group_by':'post_type'}"
          />
                </group>
            </search>
        </field>
    </record>

    <record id="action_wp_post" model="ir.actions.act_window">
        <field name="name">Wordpress Posts</field>
        <field name="res_model">wp.post</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Add menu for WP Posts -->
    <menuitem
    id="menu_wp_post"
    name="Wordpress Posts"
    parent="menu_mobile_app_wp"
    action="action_wp_post"
    groups="sales_team.group_sale_manager"
  />

</odoo>
