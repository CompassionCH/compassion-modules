      <field name="x_max">1175</field>
      <field name="y_min">143</field>
      <field name="y_max">204</field>
    </record>
    
    <record id="test_german_checkbox" model="sponsorship.correspondence.lang.checkbox">
      <field name="template_id" ref="test_template"/>
      <field name="language_id" ref="lang_compassion_german"/>
      <field name="x_min">1111</field>
      <field name="x_max">1175</field>
      <field name="y_min">229</field>
      <field name="y_max">285</field>
    </record>
                
    <record id="test_spanish_checkbox" model="sponsorship.correspondence.lang.checkbox">
      <field name="template_id" ref="test_template"/>
      <field name="language_id" ref="lang_compassion_spanish"/>
