    <record id="test_english_checkbox" model="sponsorship.correspondence.lang.checkbox">
      <field name="template_id" ref="test_template"/>
      <field name="language_id" ref="lang_compassion_english"/>
      <field name="x_min">1557</field>
      <field name="x_max">1616</field>
      <field name="y_min">143</field>
      <field name="y_max">204</field>
    </record>
    
    <record id="test_other_checkbox" model="sponsorship.correspondence.lang.checkbox">
      <field name="template_id" ref="test_template"/>
      <field name="x_min">1557</field>
      <field name="x_max">1616</field>
      <field name="y_min">229</field>
      <field name="y_max">285</field>
    </record>

    <!-- QR Code -->
    <record id="qrcode_x_min" model="ir.config_parameter">
      <field name="key">qrcode_x_min</field>
      <field name="value">0.0</field>
    </record>
    
    <record id="qrcode_x_max" model="ir.config_parameter">
      <field name="key">qrcode_x_max</field>
      <field name="value">0.33</field>
    </record>
    
    <record id="qrcode_y_min" model="ir.config_parameter">
      <field name="key">qrcode_y_min</field>
      <field name="value">0.0</field>
    </record>
    
    <record id="qrcode_y_max" model="ir.config_parameter">
      <field name="key">qrcode_y_max</field>
      <field name="value">0.1</field>
    </record>
    
    </data>
</openerp>
