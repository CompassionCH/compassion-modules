<openerp>
  <data>
    <!-- Templates -->
    <record id="default_template" model="sponsorship.correspondence.template">
      <field name="name">Default Template</field>
      <field name="layout">CH-A-6S01-1</field>
      <field name="checkbox_ids" eval="False"/>
    </record>
    
    <record id="test_template" model="sponsorship.correspondence.template">
      <field name="name">Test Template</field>
      <field name="layout">CH-A-1S11-1</field>
      <field name="pattern_image" type="base64" file="sbc_compassion/static/src/img/triforce.png"/>
      <field name="template_image" type="base64" file="sbc_compassion/static/src/img/template_test.png"/>
      <field name="page_width">2481</field>
      <field name="page_height">3508</field>
      <field name="pattern_x_min">900</field>
      <field name="pattern_x_max">1600</field>
      <field name="pattern_y_min">3000</field>
      <field name="pattern_y_max">3508</field>
      <field name="checkbox_ids" eval="False"/>
    </record>
    
    <!-- Language checkboxes -->
    <record id="test_french_checkbox" model="sponsorship.correspondence.lang.checkbox">
      <field name="template_id" ref="test_template"/>
      <field name="language_id" ref="lang_compassion_french"/>
      <field name="x_min">1111</field>
      <field name="x_max">1175</field>
      <field name="y_min">65</field>
      <field name="y_max">124</field>
    </record>
        
    <record id="test_italian_checkbox" model="sponsorship.correspondence.lang.checkbox">
      <field name="template_id" ref="test_template"/>
      <field name="language_id" ref="lang_compassion_italian"/>
