<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form Definition -->
    <record id="import_letters_config_form" model="ir.ui.view">
        <field name="name">import.letter.config.form</field>
        <field name="model">import.letter.config</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="template_id"/>
                        <field name="mandatory_review"/>
                        <field name="is_encourager"/>
                    </group>
                    <group>
                        <field name="physical_attachments"/>
                        <field name="attachments_description"/>
                        <field name="source"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="child_layout_config_form" model="ir.ui.view">
        <field name="name">correspondence.layout.form</field>
        <field name="model">correspondence.layout</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="page_1_box_ids"/>
                    <field name="page_2_box_ids"/>
                    <field name="additional_page_box_id"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree definition -->
    <record id="child_layout_config_tree" model="ir.ui.view">
        <field name="name">correspondence.layout.tree</field>
        <field name="model">correspondence.layout</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="translation_box_config_tree" model="ir.ui.view">
        <field name="name">correspondence.layout.box.tree</field>
        <field name="model">correspondence.layout.box</field>
        <field name="arch" type="xml">
            <tree>
                <field name="left"/>
                <field name="top"/>
                <field name="width"/>
                <field name="nb_lines"/>
            </tree>
        </field>
    </record>

    <!-- Action Definition -->
    <record id="import_letter_config_action" model="ir.actions.act_window">
        <field name="name">Letter Import Config</field>
        <field name="res_model">import.letter.config</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="child_layouts_config_action" model="ir.actions.act_window">
        <field name="name">Child Layouts</field>
        <field name="res_model">correspondence.layout</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Definition -->
    <menuitem id="correspondence_config" name="Correspondence" parent="child_compassion.menu_configuration" sequence="3"/>
    <menuitem id="import_letter_config_menu" parent="correspondence_config"
              name="Letter Import" action="import_letter_config_action" sequence="3"/>
    <menuitem id="child_layout_config_menu" parent="correspondence_config"
              name="Child Layouts" action="child_layouts_config_action" sequence="2"/>
</odoo>
