<odoo>
    <record id="view_correspondence_tree" model="ir.ui.view">
        <field name="name">correspondence.tree</field>
        <field name="model">correspondence</field>
        <field name="arch" type="xml">
            <tree
        decoration-danger="is_final_letter"
        decoration-primary="state == 'Draft'"
      >
                <field name="scanned_date" />
                <field name="sponsorship_id" />
                <field name="kit_identifier" />
                <field name="direction" />
                <field name="status_date" />
                <field name="state" />
                <field name="is_final_letter" column_invisible="1" />
            </tree>
        </field>
    </record>

    <record id="view_correspondence_tree_details" model="ir.ui.view">
        <field name="name">correspondence.tree.details</field>
        <field name="model">correspondence</field>
        <field name="arch" type="xml">
            <tree string="Correspondence">
                <field name="scanned_date" />
                <field name="communication_type_ids" />
                <field name="template_id" />
                <field name="original_language_id" />
                <field name="translation_language_id" />
                <field name="relationship" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <!-- Resubmit letter to GMC mass action-->
    <record id="resubmit_letter_action" model="ir.actions.server">
        <field name="name">Resubmit to GMC</field>
        <field name="model_id" ref="sbc_compassion.model_correspondence" />
        <field name="state">code</field>
        <field name="code">records.resubmit_letter()</field>
        <field
      name="binding_model_id"
      ref="sbc_compassion.model_correspondence"
    />
        <field name="binding_type">action</field>
    </record>


    <record id="view_correspondence_form" model="ir.ui.view">
        <field name="name">correspondence.form</field>
        <field name="model">correspondence</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" invisible="1" />
                    <field
            name="s2b_state"
            widget="statusbar"
            invisible="direction != 'Supporter To Beneficiary'"
            statusbar_visible="Draft,Received in the system,Global Partner translation queue,Field Office translation queue,Composition process,Printed and sent to ICP"
          />
                    <field
            name="b2s_state"
            widget="statusbar"
            invisible="direction == 'Supporter To Beneficiary'"
            statusbar_visible="Field Office translation queue,Global Partner translation queue,Composition process,Published to Global Partner"
          />
                    <button
            name="validate"
            type="object"
            string="Validate"
            invisible="state != 'Draft'"
            class="btn-success"
            icon="fa-check"
          />
                    <button
            name="resubmit_letter"
            type="object"
            string="Resubmit Letter"
            invisible="state != 'Translation check unsuccessful'"
          />
                </header>
                <sheet>
                    <field name="report_needs_overlay" invisible="True" />
                    <div name="button_box">
                        <button
              name="quality_check_failed"
              type="object"
              string="Quality Check Failed"
              invisible="state in ('Printed and sent to ICP', 'Quality check unsuccessful') or direction == 'Beneficiary To Supporter'"
              class="bg-warning"
              icon="fa-times"
            />
                        <button
              name="spread_text_to_pages"
              type="object"
              string="Spread text to pages"
              invisible="not report_needs_overlay"
              icon="fa-text-width"
            />
                    </div>
                    <field
            name="avatar_128"
            widget="image"
            class="oe_avatar"
            invisible="not avatar_128"
          />
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="scanned_date" />
                            <field
                name="sponsorship_id"
                options="{
                                    'create_edit':false,'field_color': 'state', 'search_more':true,
                                    'colors': {'terminated': 'gray', 'mandate': 'blue', 'waiting': 'blue'}}"
              />
                            <field name="file_name" invisible="1" />
                            <field
                name="sponsor_letter_scan"
                filename="file_name"
                options="{'accepted_file_extensions': '.pdf,.zip'}"
              />
                            <field name="letter_format" />
                            <field name="template_id" required="1" />
                            <field name="direction" />
                            <field
                name="communication_type_ids"
                widget="many2many_checkboxes"
              />
                        </group>
                        <group>
                            <field name="status_date" />
                            <field name="kit_identifier" readonly="1" />
                            <field name="relationship" />
                            <field name="source" />
                            <field name="is_first_letter" />
                            <field name="nbr_pages" />
                            <field name="physical_attachments" />
                            <field
                name="attachments_description"
                invisible="not physical_attachments"
              />
                            <field name="marked_for_rework" invisible="1" />
                            <field
                name="rework_reason"
                invisible="not marked_for_rework"
              />
                            <field
                name="rework_comments"
                invisible="not marked_for_rework"
              />
                        </group>
                        <group string="Supporter">
                            <field name="partner_id" />
                            <field
                name="supporter_languages_ids"
                string="Partner spoken languages"
                widget="many2many_tags"
                options="{'create':False}"
              />
                            <field name="email" />
                        </group>
                        <group string="Participant">
                            <field name="child_id" />
                            <field
                name="beneficiary_language_ids"
                string="Child spoken languages"
                widget="many2many_tags"
                options="{'create':False}"
              />
                            <field name="sponsorship_state" />
                        </group>
                    </group>
                    <separator string="Letter content" />
                    <group>
                        <group>
                            <field
                name="original_letter_url"
                groups="base.group_erp_manager"
              />
                            <field
                name="cloudinary_original_letter_url"
                groups="base.group_erp_manager"
              />
                            <field
                name="original_language_id"
                string="Original language"
                options="{'create':False}"
                required="1"
              />
                        </group>
                        <group>
                            <field
                name="final_letter_url"
                groups="base.group_erp_manager"
              />
                            <field
                name="cloudinary_final_letter_url"
                groups="base.group_erp_manager"
              />
                            <field
                name="translator"
                invisible="not translator"
                readonly="1"
              />
                            <field
                name="translation_language_id"
                options="{'create':False}"
              />
                        </group>
                    </group>
                    <field
            name="page_ids"
            context="{'default_correspondence_id': id}"
          >
                        <tree>
                            <field name="original_text" />
                            <field name="english_text" />
                            <field name="translated_text" />
                        </tree>
                    </field>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_correspondence_page_form" model="ir.ui.view">
        <field name="name">correspondence.page.form</field>
        <field name="model">correspondence.page</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="correspondence_id" />
                        <field name="original_page_url" />
                        <field name="final_page_url" />
                        <field name="final_page_image" widget="image" />
                    </group>
                </group>
                <group>
                    <field name="paragraph_ids">
                        <tree editable="bottom">
                            <field name="original_text" />
                            <field name="english_text" />
                            <field name="translated_text" />
                            <field name="sequence" widget="handle" />
                        </tree>
                    </field>
                </group>
            </form>
        </field>
    </record>

    <record
    id="action_compassion_correspondence_form"
    model="ir.actions.act_window"
  >
        <field name="name">Correspondence</field>
        <field name="res_model">correspondence</field>
        <field name="view_mode">tree,form</field>
        <field
      name="context"
    >{'search_default_state_published':1, 'search_default_unread':1,}</field>
    </record>

    <!-- Extends the search on sponsorship correspondence -->
    <record id="correspondence_view_search" model="ir.ui.view">
        <field name="name">correspondence.search</field>
        <field name="model">correspondence</field>
        <field name="arch" type="xml">
            <search>
                <field name="kit_identifier" />
                <field name="child_id" />
                <field name="partner_id" />
                <field name="direction" />
                <field name="state" />
                <field name="sponsorship_id" />
                <filter
          name="direction_stb"
          string="Supporter To Beneficiary"
          domain="[('direction','=','Supporter To Beneficiary')]"
        />
                <separator />
                <filter
          name="direction_bts"
          string="Beneficiary To Supporter"
          domain="[('direction','=','Beneficiary To Supporter')]"
        />
                <separator />
                <filter
          name="state_published"
          string="Published state"
          domain="[('state','=','Published to Global Partner')]"
        />
                <group expand="0" string="Group By">
                    <filter
            string="Partner"
            name="partner"
            domain="[]"
            context="{'group_by': 'partner_id'}"
          />
                    <filter
            string="Sponsorship"
            name="sponsorship"
            domain="[]"
            context="{'group_by': 'sponsorship_id'}"
          />
                    <filter
            string="State"
            name="group_state"
            domain="[]"
            context="{'group_by': 'state'}"
          />
                </group>
            </search>
        </field>
    </record>

    <!-- Message center menus -->
    <record id="action_gmc_message_create_letter" model="ir.actions.act_window">
        <field name="name">Letter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">gmc.message</field>
        <field name="view_mode">tree,form</field>
        <field
      name="search_view_id"
      ref="message_center_compassion.view_gmc_message_filter"
    />
        <field
      name="context"
    >{'search_default_pending':1, 'search_default_failure':1}</field>
        <field
      name="domain"
    >[('action_id.model', '=', 'correspondence'),('direction','=','out')]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No messages.
            </p>
        </field>
    </record>

    <menuitem
    id="menu_message_letter_create"
    parent="message_center_compassion.menu_message_outgoing"
    action="action_gmc_message_create_letter"
    sequence="9"
  />

    <menuitem
    id="menu_correspondence"
    parent="child_compassion.menu_sponsorship_root"
    name="Correspondence"
    sequence="4"
  />

    <menuitem
    id="menu_sponsorship_letters"
    parent="menu_correspondence"
    name="Letters"
    action="action_compassion_correspondence_form"
    sequence="0"
  />
</odoo>
