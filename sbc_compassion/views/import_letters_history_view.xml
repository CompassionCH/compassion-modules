<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Form Definition -->
    <record id="import_letters_history_form" model="ir.ui.view">
        <field name="name">import.letters.history.form</field>
        <field name="model">import.letters.history</field>
        <field name="arch" type="xml">
            <form string="Imports">
                <header>
                    <field
            name="state"
            widget="statusbar"
            statusbar_visible="draft,open,done"
          />
                    <field name="import_completed" invisible="1" />
                    <button
            name="button_save"
            string="Import Letters"
            invisible="state != 'ready'"
            type="object"
            class="oe_highlight"
          />
                    <button
            name="button_import"
            string="Load Files"
            type="object"
            invisible="state != 'draft'"
          />
                    <button
            name="button_review"
            string="Review Imports"
            type="object"
            class="oe_highlight"
            invisible="state != 'open'"
          />
                </header>
                <sheet>
                    <h1>Imported Letters</h1>
                    <group>
                        <label
              for="data"
              string="Files"
              invisible="state != 'draft'"
            />
                        <div invisible="state != 'draft'">
                            <field name="data" widget="many2many_binary" />
                        </div>
                        <field name="config_id" widget="radio" />
                        <field name="nber_letters" />
                        <field name="physical_attachments" />
                        <field name="attachments_description" />
                        <field
              name="template_id"
              invisible="state not in ('draft', 'open')"
            />
                    </group>
                    <group>
                        <field
              name="import_line_ids"
              invisible="state not in ('open','pending','ready')"
              domain="[('id','=','-1')]"
            >
                            <tree
                decoration-danger="status != 'ok'"
                decoration-success="status == 'ok'"
                create="false"
                editable="bottom"
              >
                                <field name="status" />
                                <field name="partner_id" />
                                <field name="child_id" />
                                <field name="template_id" />
                                <field name="letter_language_id" />
                                <field name="original_text" />
                                <field name="physical_attachments" />
                                <field name="attachments_description" />
                                <field
                  name="letter_image_preview"
                  widget='image'
                  options="{'height': 400}"
                  string="Letter image preview"
                  readonly="1"
                />
                            </tree>
                        </field>
                        <field name="letters_ids" invisible="state != 'done'" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Tree Definition -->
    <record id="import_letters_history_tree" model="ir.ui.view">
        <field name="name">import.letters.history.tree</field>
        <field name="model">import.letters.history</field>
        <field name="arch" type="xml">
            <tree
        string="Imports"
        decoration-primary="state == 'draft'"
        decoration-info="state in ('open','pending')"
        decoration-success="state == 'ready'"
        decoration-muted="state == 'done'"
      >
                <field name="create_date" />
                <field name="write_date" />
                <field name="nber_letters" />
                <field name="config_id" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <!-- Search Definition -->
    <record id="import_view_search" model="ir.ui.view">
        <field name="name">import.correspondence.search</field>
        <field name="model">import.letters.history</field>
        <field name="arch" type="xml">
            <search>
                <field name="state" />
                <field name="config_id" />
                <filter
          name="open"
          string="Open"
          domain="[('state','!=','done')]"
        />
            </search>
        </field>
    </record>


    <!-- Action Definition -->
    <record
    id="action_compassion_import_letters_action"
    model="ir.actions.act_window"
  >
        <field name="name">Imports</field>
        <field name="res_model">import.letters.history</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_open':1}</field>
    </record>


    <!-- Menu Definition -->
    <menuitem
    id="import_letters_menu"
    parent="menu_correspondence"
    name="Imports"
    action="action_compassion_import_letters_action"
    sequence="3"
  />
</odoo>
