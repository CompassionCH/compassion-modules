<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      

        <!-- Form Definition -->
        <record id="import_letters_history_form" model="ir.ui.view">
            <field name="name">import.letters.history.form</field>
            <field name="model">import.letters.history</field>
            <field name="arch" type="xml">
            <form string="Import Mail">
            <sheet>
                <h1>
		  Imported Letters
                </h1>
                <group>
                    <field name="list_zip" invisible="1"/>
                    <field name="data" widget="many2many_binary" string="Add a File"/>
                    <field name="nber_file" string="Number of files: "/>
                    <field name="debug"/>
                </group>
		<field name="save_visible" invisible="1"/>
                <button name="button_run_analyze" type="object" string="Run"/>
                <button name="button_save" type="action" string="Save"/>
                <field name="import_letters_line_ids" create="False" edit="False"/>
            </sheet>
            </form>
            </field>
        </record>

        <!-- Action Definition -->
        <record id="action_compassion_import_letters_action" model="ir.actions.act_window">
            <field name="name">Imports</field>
            <field name="res_model">import.letters.history</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form,tree</field>
            <field name="view_mode">form</field>
        </record>


        <!-- Menu Definition -->
        <menuitem id="import_letters_menu" parent="menu_sponsorship_correspondence"
        name="Imports" action="action_compassion_import_letters_action" sequence="1"/>
    </data>
</openerp>
