<odoo>
    <record id="view_correspondence_template_origin_tree" model="ir.ui.view">
        <field name="name">correspondence.template.tree</field>
        <field name="model">correspondence.template</field>
        <field name="arch" type="xml">
            <tree string="Correspondence Templates">
                <field name="name"/>
                <field name="layout"/>
                <field name="usage_count"/>
            </tree>
        </field>
    </record>

    <record id="view_correspondence_template_origin_form" model="ir.ui.view">
        <field name="name">correspondence.template.form</field>
        <field name="model">correspondence.template</field>
        <field name="arch" type="xml">
            <form string="Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="layout"/>
                            <field name="active"/>
                            <field name="pattern_image" widget="image" class="oe_avatar"/>
                            <field name="usage_count"/>
                            <separator colspan="2" string="Language checkboxes"/>
                            <field name="header_box"/>
                            <field name="header_box2"/>
                            <field name="header_box3"/>
                            <field name="header_box4"/>
                            <field name="text_boxes">
                                <tree editable="bottom">
                                    <field name="x_min"/>
                                    <field name="x_max"/>
                                    <field name="y_min"/>
                                    <field name="y_max"/>
                                    <field name="text_line_height"/>
                                    <field name="text_type"/>
                                </tree>
                            </field>
                            <field name="text_boxes2">
                                <tree editable="bottom">
                                    <field name="x_min"/>
                                    <field name="x_max"/>
                                    <field name="y_min"/>
                                    <field name="y_max"/>
                                    <field name="text_line_height"/>
                                    <field name="text_type"/>
                                </tree>
                            </field>
                            <field name="text_boxes3">
                                <tree editable="bottom">
                                    <field name="x_min"/>
                                    <field name="x_max"/>
                                    <field name="y_min"/>
                                    <field name="y_max"/>
                                    <field name="text_line_height"/>
                                    <field name="text_type"/>
                                </tree>
                            </field>
                            <field name="text_boxes4">
                                <tree editable="bottom">
                                    <field name="x_min"/>
                                    <field name="x_max"/>
                                    <field name="y_min"/>
                                    <field name="y_max"/>
                                    <field name="text_line_height"/>
                                    <field name="text_type"/>
                                </tree>
                            </field>
                            <field name="image_boxes">
                                <tree editable="bottom">
                                    <field name="x_min"/>
                                    <field name="x_max"/>
                                    <field name="y_min"/>
                                    <field name="y_max"/>
                                </tree>
                            </field>
                            <field name="image_boxes2">
                                <tree editable="bottom">
                                    <field name="x_min"/>
                                    <field name="x_max"/>
                                    <field name="y_min"/>
                                    <field name="y_max"/>
                                </tree>
                            </field>
                            <field name="image_boxes3">
                                <tree editable="bottom">
                                    <field name="x_min"/>
                                    <field name="x_max"/>
                                    <field name="y_min"/>
                                    <field name="y_max"/>
                                </tree>
                            </field>
                            <field name="image_boxes4">
                                <tree editable="bottom">
                                    <field name="x_min"/>
                                    <field name="x_max"/>
                                    <field name="y_min"/>
                                    <field name="y_max"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Metadata">
                            <field name="page_width"/>
                            <field name="page_height"/>
                            <field name="qrcode_x_min"/>
                            <field name="qrcode_x_max"/>
                            <field name="qrcode_y_min"/>
                            <field name="qrcode_y_max"/>
                            <separator colspan="2"/>
                            <field name="pattern_x_min"/>
                            <field name="pattern_x_max"/>
                            <field name="pattern_y_min"/>
                            <field name="pattern_y_max"/>
                            <field name="nber_keypoints"/>
                            <separator string="S2B Generation" colspan="2"/>
                            <field name="report_id"/>
                        </group>
                        <group>
                            <field name="template_image" widget="image" required="1" width="210px" height="297px"/>
                            <field name="template_image2" widget="image" required="1" width="210px" height="297px"/>
                            <field name="template_image3" widget="image" required="1" width="210px" height="297px"/>
                            <field name="template_image4" widget="image" required="1" width="210px" height="297px"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_compassion_correspondence_template_form" model="ir.actions.act_window">
        <field name="name">Correspondence Templates</field>
        <field name="res_model">correspondence.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Add item in the 'More' list -->
    <act_window id="action_cross_check_correspondence_template"
                key2="client_action_multi" name="Cross Check Patterns"
                res_model="correspondence.template.crosscheck"
                src_model="correspondence.template"
                view_mode="form" target="new" view_type="form"
    />


    <menuitem id="menu_correspondence_template" parent="correspondence_config" action="action_compassion_correspondence_template_form"
              name="Correspondence Templates" sequence="1"/>
</odoo>
