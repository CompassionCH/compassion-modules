<odoo>
    <record id="view_correspondence_template_origin_tree" model="ir.ui.view">
        <field name="name">correspondence.template.tree</field>
        <field name="model">correspondence.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="type" />
                <field name="layout" />
                <field name="usage_count" />
            </tree>
        </field>
    </record>

    <record id="view_correspondence_template_origin_form" model="ir.ui.view">
        <field name="name">correspondence.template.form</field>
        <field name="model">correspondence.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field
            name="template_image"
            widget="image"
            class="oe_avatar"
          />
                    <field name="active" invisible="1" />
                    <widget
            name="web_ribbon"
            title="Archived"
            bg_color="text-bg-danger"
            invisible="active"
          />
                    <group>
                        <group>
                            <field name="name" />
                            <field name="layout" />
                            <field name="usage_count" />
                        </group>
                    </group>
                    <group string="Pages layout">
                        <field
              name="page_ids"
              context="{'default_template_id': id}"
            />
                        <field
              name="additional_page_id"
              context="{'default_template_id': id}"
            />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="correspondence_text_box_view" model="ir.ui.view">
        <field name="name">correspondence.text.box.form</field>
        <field name="model">correspondence.text.box</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name" />
                        <field name="x_min" />
                        <field name="y_min" />
                        <field name="max_chars" />
                        <field name="text_line_height" />
                    </group>
                    <group>
                        <field name="text_type" />
                        <field name="width" />
                        <field name="height" />
                        <field name="line_size" />
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record
    id="action_compassion_correspondence_template_form"
    model="ir.actions.act_window"
  >
        <field name="name">Correspondence Templates</field>
        <field name="res_model">correspondence.template</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
    id="menu_correspondence_template"
    parent="correspondence_config"
    action="action_compassion_correspondence_template_form"
    name="Correspondence Templates"
    sequence="1"
  />
</odoo>
