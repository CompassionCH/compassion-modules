<odoo>
    <record id="letter_image_wizard_form" model="ir.ui.view">
        <field name="name">letter.image.wizard.form</field>
        <field name="model">letter.image.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="image" />
                        <field name="format" />
                        <field name="dpi" />
                        <field name="page_number" />
                        <field
              name="image_preview"
              widget="image"
              invisible="not image_preview or format not in ('jpeg', 'png')"
            />
                        <field
              name="image_download"
              invisible="not image_download or format not in ('jpeg', 'png')"
            />
                    </group>
                </sheet>
                <footer>
                    <button
            name="get_image"
            type="object"
            string="Get image"
            class="oe_highlight"
          />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_retrieve_image" model="ir.actions.act_window">
        <field name="name">Retrieve image</field>
        <field name="res_model">letter.image.wizard</field>
        <field name="binding_model_id" ref="model_correspondence" />
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
