<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <!-- Tree Definition -->
    <record id="view_import_letter_line_tree" model="ir.ui.view">
      <field name="name">import.letter.line.tree</field>
      <field name="model">import.letter.line</field>
      <field name="arch" type="xml">
        <tree string="Import letters lines" colors="red:status != 'ok';green:status == 'ok'" editable="top">
          <field name="status"/>
          <field name="sponsorship_status" invisible="1"/>
	  <field name="sponsorship_id" invisible="1"/>
          <field name="partner_codega"/>
          <field name="child_code"/>
          <field name="template_id"/>
          <field name="supporter_languages_id"/>
          <field name="is_encourager"/>
          <field name="letter_image"/>
          <field name="letter_image_preview" widget='image' string="Letter image preview"/>
        </tree>
      </field>
    </record>
  </data>
</openerp>
