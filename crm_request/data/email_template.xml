<odoo>
    <data noupdate="1">
        <record id="business_closed_email_template" model="mail.template">
            <field name="name">Holiday - Automated response</field>
            <field name="model_id" ref="holiday.closure"/>
            <field name="use_default_to" eval="True"/>
            <field name="subject">Holiday response</field>
            <field name="body_html" type="html">
                <div>
                    % set date_start = object.date_start
                    % set date_end = object.date_end
                    % set holiday_name = object.holiday_name
                </div>
                <div>
                    Dear XXX,
                    <br/>
                    <br/>
                    Compassion is closed for ${holiday_name}, from the ${date_start} to the ${date_end}. You will get an answer as soon as we reopen.
                    <br/>
                    <br/>
                    Yours sincerely
                </div>
            </field>
        </record>
    </data>
</odoo>