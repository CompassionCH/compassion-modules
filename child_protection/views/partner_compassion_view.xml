<odoo>
    <!-- Move all personal fields in the tab from OCA partner-birthdate -->
    <record id="view_partner_form_compassion_birthdate" model="ir.ui.view">
        <field name="name">res.partner.form.compassion.personal.info</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="partner_personal_info.view_partner_form_compassion_birthdate"/>
        <field name="arch" type="xml">
            <!-- Add fields in the tab -->
            <group name="personal_information_group">
                <group string="Child Protection" name="child_protection_charter_fields">
                    <field string="Has agreed" name="has_agreed_child_protection_charter"/>
                    <field string="Date agreed" name="date_agreed_child_protection_charter" readonly="1"/>
                    <field name="criminal_record_name" invisible="1"/>
                    <field name="criminal_record" filename="criminal_record_name" groups="child_protection.group_criminal_record"/>
                    <field name="criminal_record_date"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
