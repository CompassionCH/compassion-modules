<openerp>
<data noupdate="1">
	<record id="recurring_contract.recurring_invoicer_cron" model="ir.cron">
		<field name="name">Launch friday invoice generation</field>
		<field name="interval_number">7</field>
		<field name="interval_type">days</field>
		<field name="nextcall" eval="(__import__('datetime').datetime.today().replace(hour=20, minute=00) + timedelta(days=(4-__import__('datetime').datetime.today().weekday())%7)).strftime('%Y-%m-%d %H:%M:%S')" />
	</record>
</data>
</openerp>
