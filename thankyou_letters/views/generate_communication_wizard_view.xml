<odoo>
    <record model="ir.ui.view" id="generate_communication_wizard_thanks_form">
        <field name="name">generate.communication.wizard.thanks.form</field>
        <field name="model">partner.communication.generate.wizard</field>
        <field
      name="inherit_id"
      ref="partner_communication.generate_communication_wizard_form"
    />
        <field name="arch" type="xml">
            <field name="force_language" position="after">
                <field
          name="print_subject"
          invisible="send_mode == 'digital' or not customize_template"
        />
                <field
          name="print_header"
          invisible="send_mode == 'digital' or not customize_template"
        />
                <field
          name="success_story_id"
          invisible="not customize_template"
        />
            </field>
        </field>
    </record>
</odoo>
