<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="thankyou_config_view" model="ir.ui.view">
        <field name="name">thankyou.config.tree</field>
        <field name="model">thankyou.config</field>
        <field name="arch" type="xml">
            <tree string="Thankyou Configs" editable="bottom">
                <field name="min_donation_amount"/>
                <field name="thanker_user"/>
                <field name="send_mode"/>
            </tree>
        </field>
    </record>

    <record id="action_thank_you_config" model="ir.actions.act_window">
        <field name="name">Thank You</field>
        <field name="res_model">thankyou.config</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Add an entry in Sponsorship \ Configuration \ Correspondence -->
    <menuitem name="Thank you" id="thank_you_config_item" parent="child_compassion.menu_communication_config"
              action="action_thank_you_config" sequence="3"/>
</odoo>
