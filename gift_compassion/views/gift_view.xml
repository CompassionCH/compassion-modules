<odoo>
    <record id="view_gift_tree" model="ir.ui.view">
        <field name="name">sponsorship.gift.tree</field>
        <field name="model">sponsorship.gift</field>
        <field name="arch" type="xml">
            <tree
        decoration-info="state == 'draft'"
        decoration-success="state == 'verify'"
        decoration-danger="state == 'error'"
        decoration-muted="state == 'fund_delivered'"
      >
                <field name="gmc_gift_id" />
                <field name="create_date" />
                <field name="gift_date" />
                <field name="partner_id" />
                <field name="child_id" />
                <field name="gift_type" />
                <field name="sponsorship_gift_type" />
                <field name="amount" sum="Amount" />
                <field name="amount_us_dollars" />
                <field name="instructions" />
                <field name="date_sent" />
                <field name="state" />
                <field name="project_suspended" />
            </tree>
        </field>
    </record>

    <record id="view_gift_form" model="ir.ui.view">
        <field name="name">sponsorship.gift.form</field>
        <field name="model">sponsorship.gift</field>
        <field name="arch" type="xml">
            <form string="Gift">
                <header>
                    <field
            name="state"
            widget="statusbar"
            statusbar_visible="draft,In Progress,Delivered"
            readonly="1"
          />
                    <button
            name="action_send"
            type="object"
            string="Send Now"
            class="oe_highlight"
            invisible="state not in ('draft', 'open')"
            context="{'async_mode': False}"
          />
                    <button
            name="action_verify"
            type="object"
            string="To Verify"
            invisible="state not in ('draft', 'error')"
          />
                    <button
            name="action_ok"
            type="object"
            string="Gift OK"
            class="oe_highlight"
            invisible="state != 'verify'"
          />
                    <button
            name="action_cancel"
            type="object"
            string="Cancel Gift"
            help="Will unreconcile the payment"
            invisible="state not in ('draft', 'verify')"
          />
                    <button
            name="mark_sent"
            type="object"
            string="Mark as delivered"
            invisible="state not in ('draft', 'verify', 'open')"
            confirm="This will cancel the message for GMC and put the gift in Delivered state. Are you sure?"
          />
                </header>
                <sheet>
                    <div class="oe_button_box" name="buttons">
                        <button
              name="%(action_collect_invoices)d"
              string="Collect invoices"
              type="action"
              icon="fa-pencil-square-o"
              class="oe_stat_button"
              invisible="state != 'draft'"
            />
                        <button
              name="view_invoices"
              string="Invoiced"
              type="object"
              icon="fa-pencil-square-o"
              class="oe_stat_button"
            />
                    </div>
                    <!-- Alert to warn on the no payment generation -->
                    <field name="is_param_set" invisible="True" readonly="1" />
                    <div
            class="alert alert-warning text-center o_form_header"
            role="alert"
            invisible="is_param_set or state != 'draft'"
          >

                        <a class="close" data-dismiss="alert" href="#">x</a>
                        <div>
                            GMC gift payment accounting entries are disabled. (compassion accounting settings)
                        </div>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field
                name="sponsorship_id"
                options="{'colors':{'draft':'blue', 'waiting':'green', 'cancelled':'grey', 'terminated':'grey', 'mandate':'red'}, 'field_color':'state'}"
                required="gift_type != 'Project Gift'"
              />
                            <field
                name="partner_id"
                domain="[('global_id', '!=', False)]"
                readonly="sponsorship_id != False"
              />
                            <field
                name="child_id"
                readonly="sponsorship_id != False"
              />
                            <field
                name="project_id"
                readonly="sponsorship_id != False"
              />
                        </group>
                        <group>
                            <field name="gift_type" />
                            <field name="attribution" />
                            <field
                name="sponsorship_gift_type"
                invisible="gift_type != 'Beneficiary Gift'"
                required="gift_type == 'Beneficiary Gift'"
              />
                            <field name="instructions" />
                        </group>
                        <group>
                            <field name="gift_date" />
                            <field name="date_partner_paid" />
                            <field name="date_sent" readonly="1" />
                            <field
                name="message_id"
                groups="message_center_compassion.group_gmc_user"
              />
                            <field
                name="payment_id"
                invisible="is_param_set == False"
              />
                            <field
                name="inverse_payment_id"
                invisible="inverse_payment_id == False"
              />
                        </group>
                        <group>
                            <field name="gmc_gift_id" readonly="1" />
                            <field
                name="undeliverable_reason"
                invisible="state != 'Undeliverable'"
                readonly="1"
              />
                            <field name="exchange_rate" readonly="1" />
                            <field name="threshold_alert" readonly="1" />
                            <field
                name="threshold_alert_type"
                invisible="threshold_alert == False"
                readonly="1"
              />
                            <field name="field_office_notes" readonly="1" />
                            <field name="status_change_date" readonly="1" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Sponsor payments">
                            <field name="currency_id" invisible="True" />
                            <field name="currency_usd" invisible="True" />
                            <field name="invoice_line_ids" readonly="1" />
                            <group class="oe_subtotal_footer oe_right">
                                <field
                  name="amount_us_dollars"
                  widget="monetary"
                  options="{'currency_field': 'currency_usd'}"
                  readonly="1"
                />
                                <field
                  name="amount"
                  widget="monetary"
                  class="oe_subtotal_footer_separator"
                  options="{'currency_field': 'currency_id'}"
                />
                            </group>
                            <separator />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_gift_filter" model="ir.ui.view">
        <field name="name">sponsorship.gift.filter</field>
        <field name="model">sponsorship.gift</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id" />
                <field name="child_id" />
                <field name="state" />
                <field name="gmc_gift_id" />

                <filter
          string="Not sent"
          name="not_sent"
          domain="[('gmc_gift_id', '=', False)]"
        />
                <filter
          string="Verify"
          name="verify"
          domain="[('state', '=', 'verify')]"
        />
                <filter
          string="Sent"
          name="sent"
          domain="[('gmc_gift_id', '!=', False)]"
        />
                <filter
          string="Delivered"
          name="delivered"
          domain="[('state', '=', 'Delivered')]"
        />
                <group expand="0" string="Group By...">
                    <filter
            string="Status"
            name="status"
            domain="[]"
            context="{'group_by': 'state'}"
          />
                    <filter
            string="Gift Type"
            name="gift_type"
            domain="[]"
            context="{'group_by': 'gift_type'}"
          />
                    <filter
            name='group_by_date'
            string="Gift Date"
            domain="[]"
            context="{'group_by': 'gift_date'}"
          />
                </group>
            </search>
        </field>
    </record>

    <record id="action_sponsorship_gift" model="ir.actions.act_window">
        <field name="name">Sponsorship Gifts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sponsorship.gift</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                No gifts.
            </p>
        </field>
        <field name="context">
            {'search_default_not_sent': 1, 'search_default_group_by_date': 1}
        </field>
    </record>

    <!-- Send Gift actions -->
    <record id="send_gift" model="ir.actions.server">
        <field name="name">Send Now</field>
        <field name="model_id" ref="model_sponsorship_gift" />
        <field name="binding_model_id" ref="model_sponsorship_gift" />
        <field name="state">code</field>
        <field name="code">records.action_send()</field>
    </record>
    <record id="deliver_gift" model="ir.actions.server">
        <field name="name">Mark as delivered</field>
        <field name="model_id" ref="model_sponsorship_gift" />
        <field name="binding_model_id" ref="model_sponsorship_gift" />
        <field name="state">code</field>
        <field name="code">records.mark_sent()</field>
    </record>

    <menuitem
    id="menu_sponsorship_gift"
    parent="account.menu_finance_receivables"
    action="action_sponsorship_gift"
  />
</odoo>
