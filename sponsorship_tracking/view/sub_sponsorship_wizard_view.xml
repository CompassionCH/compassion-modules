<openerp>
    <data>
        <record id="sub_sponsorship_view" model="ir.ui.view">
            <field name="name">sds.subsponsorship.wizard.view</field>
            <field name="model">sds.subsponsorship.wizard</field>   
            <field name="arch" type="xml">
                <form string="Create SUB Sponsorship" version="7.0">
                    <sheet>
                        <field name="state" invisible="1"/>
                        <group states="sub">
                            <field name="child_id" attrs="{'required': [('state', '=', 'sub')]}"
                                   domain="[('state', 'in', ('N', 'D', 'I', 'R', 'Z')), ('project_id.suspension', 'not in', ('suspended','fund-suspended'))]"
                                   options="{'create': false, 'm2o_dialog': false, 'create_edit': false, 'colors':{
                                             'R':'red', 'N':'blue'}, 'field_color':'state'}"/>
                        </group>
                        <group states="no_sub">
                            <field name="no_sub_default_reasons" attrs="{'required': [('state', '=', 'no_sub')]}"/>
                            <field name="no_sub_reason" attrs="{'invisible': [('no_sub_default_reasons', '!=', 'other')], 'required': [('no_sub_default_reasons', '=', 'other')]}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="create_subsponsorship" string="Create SUB Sponsorship" type="object" class="oe_highlight" states="sub"/>
                        <button name="no_sub" string="No SUB" type="object" class="oe_highlight" states="no_sub"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_create_sub_sponsorship">
            <field name="name">Create SUB Sponsorship</field>
            <field name="res_model">sds.subsponsorship.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>