<odoo>
    <record id="view_sds_follower_settings_form" model="ir.ui.view">
        <field name="name">sds.follower.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="child_compassion.compassion_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='compassion_settings']" position='inside'>

                <h2>SDS Followers</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="row mt16">
                                <label class="col-md-5 o_light_label"
                                       for="sub_fr"/>
                                <field name="sub_fr"/>
                            </div>
                            <div class="row mt16">
                                <label class="col-md-5 o_light_label"
                                       for="sub_de"/>
                                <field name="sub_de"/>
                            </div>

                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="row mt16">
                                <label class="col-md-5 o_light_label"
                                       for="sub_it"/>
                                <field name="sub_it"/>
                            </div>
                            <div class="row mt16">
                                <label class="col-md-5 o_light_label"
                                       for="sub_en"/>
                                <field name="sub_en"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="open_sds_follower_config" model="ir.actions.act_window">
        <field name="name">SDS Followers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="view_sds_follower_settings_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'child_compassion'}</field>
    </record>

    <menuitem id="menu_sds_followers_configuration" name="SDS Followers"
              parent="child_compassion.menu_configuration"
              action="open_sds_follower_config"/>
</odoo>
